<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Urban Ease - Community Managers</title>
    <link rel="stylesheet" href="/css/admin/community-managers.css">
    <link rel="stylesheet" href="/css/sidebar.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</head>
<body>
<div class="container">
  <!-- Sidebar -->
  <%- include('../partials/sidebarAdmin') %>
  
  <!-- Main content -->
  <div class="main-content">
    <div class="header">
      <div class="d-flex align-items-center">
        <span class="menu-toggle" id="menu-toggle">
          <i class="fas fa-bars"></i>
        </span>
        <h1>Community Managers</h1>
      </div>
      <div class="header-actions">
        <button class="btn btn-primary" id="addManagerBtn">
          <i class="fas fa-plus"></i>
          <span>Add Manager</span>
        </button>
      </div>
    </div>
    
    <!-- Filters section -->
    <div class="filters-section">
      <div class="filter-item search-box">
        <input type="text" class="search-input" id="searchInput" placeholder="Search managers...">
        <i class="fas fa-search search-icon"></i>
      </div>
      <div class="filter-item">
        <select class="form-select" id="communityFilter">
          <option value="">All Communities</option>
          <% 
            // Get unique communities
            const communityNames = [];
            managers.forEach(manager => {
              if (manager.assignedCommunity && !communityNames.includes(manager.assignedCommunity.name)) {
                communityNames.push(manager.assignedCommunity.name);
              }
            });
          %>
          <% communityNames.forEach(name => { %>
            <option value="<%= name %>"><%= name %></option>
          <% }); %>
        </select>
      </div>
    </div>

    <!-- Managers table -->
    <div class="table-container">
      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th>Name</th>
              <th>Email</th>
              <th>Contact</th>
              <th>Assigned Community</th>
              <th>Created Date</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody id="managersTableBody">
            <% if (managers.length === 0) { %>
              <tr>
                <td colspan="6" class="text-center">No community managers found</td>
              </tr>
            <% } else { %>
              <% managers.forEach(manager => { %>
                <tr data-id="<%= manager._id %>">
                  <td><%= manager.name %></td>
                  <td><%= manager.email %></td>
                  <td><%= manager.contact %></td>
                  <td><%= manager.assignedCommunity ? manager.assignedCommunity.name : 'Unassigned' %></td>
                  <td><%= new Date(manager.createdAt).toLocaleDateString() %></td>
                  <td>
                    <div class="table-actions">
                      <button class="btn btn-sm btn-icon btn-view" data-id="<%= manager._id %>">
                        <i class="fas fa-eye"></i>
                      </button>
                      <button class="btn btn-sm btn-icon btn-edit" data-id="<%= manager._id %>">
                        <i class="fas fa-edit"></i>
                      </button>
                      <button class="btn btn-sm btn-icon btn-delete" data-id="<%= manager._id %>">
                        <i class="fas fa-trash"></i>
                      </button>
                    </div>
                  </td>
                </tr>
              <% }); %>
            <% } %>
          </tbody>
        </table>
      </div>
      
      <!-- Pagination -->
      <div class="pagination">
        <div class="page-info">
          Showing <span id="startRecord">1</span> to <span id="endRecord"><%= Math.min(managers.length, 8) %></span> of <span id="totalRecords"><%= managers.length %></span> entries
        </div>
        <div class="page-buttons" id="pagination">
          <button class="page-btn disabled" id="prevPage">
            <i class="fas fa-chevron-left"></i>
          </button>
          <!-- Page buttons will be generated by JavaScript -->
          <button class="page-btn" id="nextPage">
            <i class="fas fa-chevron-right"></i>
          </button>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Add/Edit Manager Modal -->
<div class="modal-backdrop" id="managerModal">
  <div class="modal">
    <div class="modal-header">
      <h5 class="modal-title" id="modalTitle">Add New Manager</h5>
      <button type="button" class="modal-close" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body">
      <form id="managerForm">
        <div class="form-group">
          <label for="managerName" class="form-label">Manager Name</label>
          <input type="text" class="form-control" id="managerName" required>
        </div>
        <div class="form-group">
          <label for="managerEmail" class="form-label">Email</label>
          <input type="email" class="form-control" id="managerEmail" required>
        </div>
        <div class="form-group">
          <label for="managerContact" class="form-label">Contact</label>
          <input type="text" class="form-control" id="managerContact" required>
        </div>
        <div class="form-group">
          <label for="managerPassword" class="form-label">Password</label>
          <input type="password" class="form-control" id="managerPassword">
          <small class="form-text text-muted" id="passwordNote">Leave empty to keep current password (when editing)</small>
        </div>
        <div class="form-group">
          <label for="assignedCommunity" class="form-label">Assigned Community</label>
          <select class="form-select" id="assignedCommunity">
            <option value="">Select Community</option>
            <% communities.forEach(community => { %>
              <option value="<%= community._id %>"><%= community.name %> (<%= community.location %>)</option>
            <% }); %>
          </select>
        </div>
      </form>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
      <button type="button" class="btn btn-primary" id="saveManager">Save</button>
    </div>
  </div>
</div>

<!-- View Manager Details Modal -->
<div class="modal-backdrop" id="viewManagerModal">
  <div class="modal">
    <div class="modal-header">
      <h5 class="modal-title">Manager Details</h5>
      <button type="button" class="modal-close" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body">
      <div id="managerDetails">
        <h3 id="detailName"></h3>
        <p><strong>Email:</strong> <span id="detailEmail"></span></p>
        <p><strong>Contact:</strong> <span id="detailContact"></span></p>
        <p><strong>Assigned Community:</strong> <span id="detailCommunity"></span></p>
        <p><strong>Created Date:</strong> <span id="detailCreated"></span></p>
      </div>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      <button type="button" class="btn btn-primary" id="editFromView">Edit</button>
    </div>
  </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal-backdrop" id="deleteConfirmationModal">
  <div class="modal">
    <div class="modal-header">
      <h5 class="modal-title">Confirm Delete</h5>
      <button type="button" class="modal-close" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body">
      <p>Are you sure you want to delete <strong id="deleteManagerName">this manager</strong>?</p>
      <p class="text-danger">This action cannot be undone.</p>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
      <button type="button" class="btn btn-danger" id="confirmDelete">Delete</button>
    </div>
  </div>
</div>

<script src="/js/admin/community-managers.js"></script>
</body>
</html>