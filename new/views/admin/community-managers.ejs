
    <!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Urban Ease - Community Managers</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
 <link rel="stylesheet" href="/css/admin/community-managers.css">
</head>

<body>
    <div class="container">
        <%- include('../partials/sidebarAdmin') %>
        <!-- Main content -->
        <div class="main-content">
            <div class="header">
                <div class="d-flex align-items-center">
                    <span class="menu-toggle" id="menu-toggle">
                        <i class="fas fa-bars"></i>
                    </span>
                    <h1>Community Managers</h1>
                </div>
                <div class="header-actions" style="display: flex; align-items: center; gap: 16px;">
                    <button class="btn btn-primary" id="addManagerBtn" style="display: none;">
                        <i class="fas fa-plus"></i>
                        <span>Add Manager</span>
                    </button>
                     <button class="btn" id="refreshBtn" style="background: linear-gradient(135deg, #10b981 0%, #059669 100%); color: white; border: none; padding: 12px 24px; border-radius: 12px; font-weight: 500; display: flex; align-items: center; gap: 8px; cursor: pointer; transition: all 0.3s ease; box-shadow: 0 4px 16px rgba(16, 185, 129, 0.2); margin-right: 12px;">
    <i class="fas fa-sync-alt" id="refreshIcon"></i>
    <span>Refresh</span>
</button>
                </div>
                
            </div>

            <!-- Filters section -->
            <div class="filters-section">
                <div class="filter-item search-box">
                    <input type="text" class="search-input" id="searchInput" placeholder="Search managers...">
                    <i class="fas fa-search search-icon"></i>
                </div>
                <div class="filter-item" style="display: none;">
                    <select class="form-select" id="communityFilter">
                        
                    </select>
                </div>
            </div>

            <!-- Managers table -->
            <div class="table-container">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Contact</th>
                                <th>Assigned Community</th>
                                <th>Created Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody id="managersTableBody">
                            <tr>
                                <td colspan="6" class="text-center">Loading managers...</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Add/Edit Manager Modal -->
    <div class="modal-backdrop" id="managerModal">
        <div class="modal">
            <div class="modal-header">
                <h5 class="modal-title" id="managerModalTitle">Add New Manager</h5>
                <button type="button" class="modal-close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <form id="managerForm">
                    <div class="form-group">
                        <label for="managerName" class="form-label">Manager Name</label>
                        <input type="text" class="form-control" id="managerName" required>
                    </div>
                    <div class="form-group">
                        <label for="managerEmail" class="form-label">Email</label>
                        <input type="email" class="form-control" id="managerEmail" required>
                    </div>
                    <div class="form-group">
                        <label for="managerContact" class="form-label">Contact</label>
                        <input type="text" class="form-control" id="managerContact" required>
                    </div>
                    <div class="form-group">
                        <label for="managerPassword" class="form-label">Password</label>
                        <input type="password" class="form-control" id="managerPassword">
                        <small class="form-text text-muted" id="passwordNote">Password is required for new managers</small>
                    </div>
                    <div class="form-group">
                        <label for="assignedCommunity" class="form-label">Assigned Community</label>
                        <select class="form-select" id="assignedCommunity">
                            <option value="">Select Community</option>
                            <option value="1">Community A (Location A)</option>
                            <option value="2">Community B (Location B)</option>
                            <option value="3">Community C (Location C)</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="saveManager">Save</button>
            </div>
        </div>
    </div>

    <!-- View Manager Details Modal -->
    <div class="modal-backdrop" id="viewManagerModal">
        <div class="modal">
            <div class="modal-header">
                <h5 class="modal-title">Manager Details</h5>
                <button type="button" class="modal-close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <div id="managerDetails">
                    <h3 id="detailName"></h3>
                    <p><strong>Email:</strong> <span id="detailEmail"></span></p>
                    <p><strong>Contact:</strong> <span id="detailContact"></span></p>
                    <p><strong>Assigned Community:</strong> <span id="detailCommunity"></span></p>
                    <p><strong>Created Date:</strong> <span id="detailCreated"></span></p>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="editFromView">Edit</button>
            </div>
        </div>
    </div>

    <!-- Delete Confirmation Modal -->
    <div class="modal-backdrop" id="deleteConfirmationModal">
        <div class="modal">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="modal-close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete <strong id="deleteManagerName">this manager</strong>?</p>
                <p class="text-danger">This action cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDelete">Delete</button>
            </div>
        </div>
    </div>

    <script src="/js/admin/community-managers.js"></script>
</body>
</html>