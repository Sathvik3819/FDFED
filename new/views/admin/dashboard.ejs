  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    /* Base Styles */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    body {
      height: 100vh;
      background: #f5f7fa;
      color: #333;
      overflow: hidden;
    }

    /* Grid Layout */
    .dashboard {
      display: grid;
      grid-template-columns: 250px 1fr;
      grid-template-rows: 60px 1fr;
      height: 100vh;
    }

    /* Sidebar */
    .sidebar {
      grid-row: 1 / -1;
      background: #151A2D;
      color: white;
      padding: 20px 0;
      overflow-y: auto;
    }

    .logo {
      padding: 0 20px 20px;
      border-bottom: 1px solid rgba(255,255,255,0.1);
      margin-bottom: 20px;
    }

    .logo h2 {
      font-size: 1.3rem;
    }

    .nav-item {
      padding: 12px 20px;
      color: rgba(255,255,255,0.7);
      text-decoration: none;
      display: flex;
      align-items: center;
      transition: all 0.3s;
    }

    .nav-item:hover, .nav-item.active {
      background: rgba(255,255,255,0.1);
      color: white;
    }

    .nav-item i {
      margin-right: 10px;
      width: 20px;
      text-align: center;
    }

    /* Header */
    .header {
      grid-column: 2;
      background: white;
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 0 20px;
      box-shadow: 0 2px 5px rgba(0,0,0,0.1);
      z-index: 10;
    }

    .header-actions .btn {
      background: #151A2D;
      color: white;
      border: none;
      padding: 8px 16px;
      border-radius: 4px;
      cursor: pointer;
    }

    /* Main Content */
    .main-content {
      grid-column: 2;
      display: grid;
      grid-template-rows: auto 1fr;
      gap: 20px;
      padding: 20px;
      overflow: hidden;
    }

    /* Stats Grid */
    .stats-grid {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      gap: 15px;
    }

    .stat-card {
      background: white;
      border-radius: 8px;
      padding: 15px;
      box-shadow: 0 2px 5px rgba(0,0,0,0.05);
      position: relative;
      overflow: hidden;
    }

    .stat-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 4px;
      background: #151A2D;
    }

    .stat-header {
      display: flex;
      justify-content: space-between;
      margin-bottom: 10px;
    }

    .stat-title {
      font-size: 0.8rem;
      color: #666;
      text-transform: uppercase;
    }

    .stat-icon {
      width: 40px;
      height: 40px;
      border-radius: 8px;
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      background: #151A2D;
    }

    .stat-value {
      font-size: 1.8rem;
      font-weight: bold;
      margin-bottom: 5px;
    }

    .stat-description {
      font-size: 0.8rem;
      color: #666;
      display: flex;
      align-items: center;
    }

    .stat-growth {
      color: #10b981;
      margin-right: 5px;
    }

    /* Data Tables Container */
    .data-container {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      grid-template-rows: repeat(2, 1fr);
      gap: 15px;
      height: calc(100vh - 220px); /* Adjust based on your header and stats height */
      overflow: hidden;
    }

    .data-section {
      background: white;
      border-radius: 8px;
      box-shadow: 0 2px 5px rgba(0,0,0,0.05);
      display: grid;
      grid-template-rows: auto 1fr;
      overflow: hidden;
    }

    .section-header {
      padding: 15px;
      border-bottom: 1px solid #eee;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .section-title {
      font-size: 1rem;
      font-weight: 600;
    }

    .section-link {
      color: #4f46e5;
      font-size: 0.8rem;
      text-decoration: none;
    }

    .table-container {
      overflow: auto;
      padding: 0 15px;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      font-size: 0.85rem;
    }

    th {
      text-align: left;
      padding: 10px 5px;
      color: #666;
      font-weight: 500;
      border-bottom: 1px solid #eee;
    }

    td {
      padding: 10px 5px;
      border-bottom: 1px solid #eee;
    }

    .status {
      display: inline-block;
      padding: 4px 8px;
      border-radius: 12px;
      font-size: 0.75rem;
      font-weight: 500;
    }

    .status-active {
      background: rgba(16, 185, 129, 0.1);
      color: #10b981;
    }

    .status-pending {
      background: rgba(245, 158, 11, 0.1);
      color: #d97706;
    }

    .status-completed {
      background: rgba(59, 130, 246, 0.1);
      color: #2563eb;
    }

    .btn-icon {
      width: 28px;
      height: 28px;
      border-radius: 4px;
      border: none;
      background: rgba(59, 130, 246, 0.1);
      color: #3b82f6;
      cursor: pointer;
    }

    /* Responsive Adjustments */
    @media (max-width: 1200px) {
      .data-container {
        grid-template-columns: 1fr;
        grid-template-rows: repeat(4, auto);
      }
    }

    @media (max-width: 768px) {
      .stats-grid {
        grid-template-columns: repeat(2, 1fr);
      }
      
      .dashboard {
        grid-template-columns: 70px 1fr;
      }
      
      .logo h2, .nav-item span {
        display: none;
      }
      
      .nav-item {
        justify-content: center;
        padding: 12px 0;
      }
      
      .nav-item i {
        margin-right: 0;
      }
    }

    @media (max-width: 480px) {
      .stats-grid {
        grid-template-columns: 1fr;
      }
    }
  </style>
</head>
