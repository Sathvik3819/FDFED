<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> | Urban Ease</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        /* Importing Google Fonts - Poppins */
        @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap');

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: "Poppins", sans-serif;
        }

        body {
            min-height: 100vh;
            background: linear-gradient(135deg, #F1FAFF 0%, #CBE4FF 100%);
            color: #2c3e50;
        }

        /* Container Layout */
        .container {
            display: flex;
            min-height: 100vh;
        }

        /* Sidebar Styles */
        .sidebar {
            position: fixed;
            width: 270px;
            margin: 16px;
            border-radius: 16px;
            background: #151A2D;
            height: calc(100vh - 32px);
            transition: all 0.4s ease;
            z-index: 1000;
        }

        .sidebar.collapsed {
            width: 85px;
        }

        /* Main Content */
        .main-content {
            flex: 1;
            margin-left: 286px;
            padding: 24px;
            transition: margin-left 0.4s ease;
        }

        .sidebar.collapsed ~ .main-content {
            margin-left: 101px;
        }

        /* Header Section */
        .header {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 16px;
            padding: 12px 32px;
            margin-bottom: 12px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            box-shadow: 0 8px 32px rgba(21, 26, 45, 0.08);
            border: 1px solid rgba(255, 255, 255, 0.3);
        }

        .header-left {
            display: flex;
            align-items: center;
            gap: 16px;
        }

        .menu-toggle {
            display: none;
            background: #151A2D;
            color: white;
            border: none;
            padding: 12px;
            border-radius: 10px;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .menu-toggle:hover {
            background: #2c3441;
            transform: translateY(-2px);
        }

        .header h1 {
            font-size: 2rem;
            font-weight: 600;
            color: #151A2D;
            margin: 0;
        }

        /* Filters Section */
        .filters-section {
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(10px);
            border-radius: 16px;
            padding: 16px 24px;
            margin-bottom: 24px;
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
            align-items: center;
            box-shadow: 0 4px 20px rgba(21, 26, 45, 0.06);
            border: 1px solid rgba(255, 255, 255, 0.3);
        }

        .search-box {
            position: relative;
        }

        .search-input {
            width: 100%;
            padding: 12px 16px 12px 48px;
            border: 2px solid rgba(21, 26, 45, 0.1);
            border-radius: 12px;
            font-size: 14px;
            background: white;
            transition: all 0.3s ease;
        }

        .search-input:focus {
            outline: none;
            border-color: #151A2D;
            box-shadow: 0 0 0 3px rgba(21, 26, 45, 0.1);
        }

        .search-icon {
            position: absolute;
            left: 16px;
            top: 50%;
            transform: translateY(-50%);
            color: #6c757d;
        }

        .form-select {
            width: 100%;
            padding: 12px 16px;
            border: 2px solid rgba(21, 26, 45, 0.1);
            border-radius: 12px;
            background: white;
            font-size: 14px;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .form-select:focus {
            outline: none;
            border-color: #151A2D;
            box-shadow: 0 0 0 3px rgba(21, 26, 45, 0.1);
        }

        /* Applications Cards */
        .applications-container {
            display: grid;
            grid-template-columns: 1fr;
            gap: 16px;
        }

        .application-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 16px;
            padding: 24px;
            transition: all 0.3s ease;
            box-shadow: 0 4px 20px rgba(21, 26, 45, 0.06);
            border: 1px solid rgba(255, 255, 255, 0.3);
        }

        .application-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 30px rgba(21, 26, 45, 0.1);
        }

        .application-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 16px;
        }

        .application-title {
            font-size: 1.25rem;
            font-weight: 600;
            color: #151A2D;
        }

        .application-meta {
            display: flex;
            align-items: center;
            gap: 12px;
            color: #6b7280;
            font-size: 0.875rem;
            margin-top: 8px;
        }

        .application-meta i {
            width: 16px;
            text-align: center;
        }

        /* Status Badges */
        .status-badge {
            font-size: 0.75rem;
            padding: 0.375rem 0.75rem;
            border-radius: 9999px;
            font-weight: 500;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .status-pending {
            background: rgba(245, 158, 11, 0.1);
            color: #d97706;
        }

        .status-approved {
            background: rgba(34, 197, 94, 0.1);
            color: #16a34a;
        }

        .status-rejected {
            background: rgba(239, 68, 68, 0.1);
            color: #dc2626;
        }

        .application-footer {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 16px;
            padding-top: 16px;
            border-top: 1px solid rgba(21, 26, 45, 0.08);
        }

        .application-date {
            font-size: 0.875rem;
            color: #6b7280;
        }

        .application-actions {
            display: flex;
            gap: 12px;
        }

        .btn {
            padding: 8px 16px;
            border-radius: 8px;
            font-size: 0.875rem;
            font-weight: 500;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .btn i {
            font-size: 0.875rem;
        }

        .btn-approve {
            background: linear-gradient(135deg, #16a34a 0%, #22c55e 100%);
            color: white;
            border: none;
        }

        .btn-approve:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(34, 197, 94, 0.3);
        }

        .btn-reject {
            background: linear-gradient(135deg, #dc2626 0%, #ef4444 100%);
            color: white;
            border: none;
        }

        .btn-reject:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(239, 68, 68, 0.3);
        }

        .empty-state {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 16px;
            padding: 48px 24px;
            text-align: center;
            box-shadow: 0 4px 20px rgba(21, 26, 45, 0.06);
            border: 1px solid rgba(255, 255, 255, 0.3);
        }

        .empty-state i {
            font-size: 3rem;
            color: #9ca3af;
            margin-bottom: 16px;
        }

        .empty-state h3 {
            font-size: 1.25rem;
            font-weight: 600;
            color: #151A2D;
            margin-bottom: 8px;
        }

        .empty-state p {
            color: #6b7280;
            max-width: 400px;
            margin: 0 auto;
        }

        /* Modal Styles */
        .modal-backdrop {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(21, 26, 45, 0.8);
            backdrop-filter: blur(4px);
            display: none;
            align-items: center;
            justify-content: center;
            z-index: 2000;
        }

        .modal-backdrop.show {
            display: flex;
        }

        .modal {
            background: white;
            border-radius: 16px;
            max-width: 500px;
            width: 90%;
            max-height: 90vh;
            overflow-y: auto;
            box-shadow: 0 20px 60px rgba(21, 26, 45, 0.3);
            transform: scale(0.9);
            transition: transform 0.3s ease;
        }

        .modal-backdrop.show .modal {
            transform: scale(1);
        }

        .modal-header {
            padding: 24px 32px 0;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .modal-title {
            font-size: 1.5rem;
            font-weight: 600;
            color: #151A2D;
            margin: 0;
        }

        .modal-close {
            background: none;
            border: none;
            font-size: 1.5rem;
            cursor: pointer;
            color: #6b7280;
            padding: 8px;
            border-radius: 4px;
            transition: all 0.3s ease;
        }

        .modal-close:hover {
            background: rgba(21, 26, 45, 0.1);
            color: #151A2D;
        }

        .modal-body {
            padding: 24px 32px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-label {
            display: block;
            margin-bottom: 8px;
            font-weight: 500;
            color: #151A2D;
        }

        .form-control {
            width: 100%;
            padding: 12px 16px;
            border: 2px solid rgba(21, 26, 45, 0.1);
            border-radius: 8px;
            font-size: 14px;
            transition: all 0.3s ease;
        }

        .form-control:focus {
            outline: none;
            border-color: #151A2D;
            box-shadow: 0 0 0 3px rgba(21, 26, 45, 0.1);
        }

        textarea.form-control {
            resize: vertical;
            min-height: 100px;
        }

        .modal-footer {
            padding: 0 32px 24px;
            display: flex;
            gap: 12px;
            justify-content: flex-end;
        }

        .btn-secondary {
            background: #e5e7eb;
            color: #374151;
            border: none;
            padding: 12px 24px;
            border-radius: 8px;
            cursor: pointer;
            font-weight: 500;
            transition: all 0.3s ease;
        }

        .btn-secondary:hover {
            background: #d1d5db;
        }

        .btn-primary {
            background: linear-gradient(135deg, #151A2D 0%, #2c3441 100%);
            color: white;
            border: none;
            padding: 12px 24px;
            border-radius: 8px;
            cursor: pointer;
            font-weight: 500;
            transition: all 0.3s ease;
        }

        .btn-primary:hover {
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(21, 26, 45, 0.3);
        }

        /* Responsive Design */
        @media (max-width: 1024px) {
            .sidebar {
                transform: translateX(-100%);
            }

            .sidebar.menu-active {
                transform: translateX(0);
            }

            .main-content {
                margin-left: 0;
                padding: 16px;
            }

            .menu-toggle {
                display: flex;
            }

            .filters-section {
                grid-template-columns: 1fr;
                gap: 16px;
            }

            .header {
                padding: 16px 20px;
            }

            .header h1 {
                font-size: 1.5rem;
            }

            .application-card {
                padding: 16px;
            }

            .application-actions {
                flex-direction: column;
                width: 100%;
            }

            .application-footer {
                flex-direction: column;
                gap: 12px;
                align-items: flex-start;
            }

            .btn {
                width: 100%;
                justify-content: center;
            }
        }

        @media (max-width: 640px) {
            .application-header {
                flex-direction: column;
                gap: 8px;
            }

            .status-badge {
                align-self: flex-start;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Sidebar would be included here -->
        <%- include('../partials/sidebarAdmin') %>

        <!-- Main content -->
        <div class="main-content">
            <div class="header">
                <div class="header-left">
                    <span class="menu-toggle" id="menu-toggle">
                        <i class="fas fa-bars"></i>
                    </span>
                    <h1>Community Manager Applications</h1>
                </div>
            </div>

            <!-- Filters section -->
            <div class="filters-section">
                <div class="search-box">
                    <input type="text" class="search-input" id="searchInput" placeholder="Search applications...">
                    <i class="fas fa-search search-icon"></i>
                </div>
                <div>
                    <select class="form-select" id="statusFilter">
                        <option value="all">All Statuses</option>
                        <option value="pending">Pending</option>
                        <option value="approved">Approved</option>
                        <option value="rejected">Rejected</option>
                    </select>
                </div>
            </div>

            <!-- Applications list -->
           <% if (interests.length === 0) { %>
    <div class="empty-state">
        <i class="fas fa-inbox"></i>
        <h3>No applications found</h3>
        <p>There are currently no community interest applications to review.</p>
    </div>
<% } else { %>
    <div class="applications-container">
        <% interests.forEach(interest => { %>
            <div class="application-card" data-status="<%= interest.status.toLowerCase() %>">
                <div class="application-header">
                    <div>
                        <h3 class="application-title">
                            <%= interest.firstName %> <%= interest.lastName %>
                        </h3>
                        <div class="application-meta">
                            <span><i class="fas fa-envelope"></i> <%= interest.email %></span>
                            <span><i class="fas fa-phone"></i> <%= interest.phone %></span>
                        </div>
                        <!-- Add community information -->
                        <div class="application-meta" style="margin-top: 8px;">
                            <span><i class="fas fa-users"></i> <%= interest.communityName %></span>
                            <span><i class="fas fa-map-marker-alt"></i> <%= interest.location %></span>
                        </div>
                    </div>
                    <span class="status-badge status-<%= interest.status.toLowerCase() %>">
                        <%= interest.status %>
                    </span>
                </div>

                <!-- Add community description -->
                <div style="margin: 12px 0; padding: 12px; background: rgba(21, 26, 45, 0.02); border-radius: 8px;">
                    <p style="margin: 0; color: #4b5563; font-size: 0.9rem;">
                        <%= interest.description.length > 150 ? interest.description.substring(0, 150) + '...' : interest.description %>
                    </p>
                </div>

               <!-- Show images if any -->
<% if (interest.photos && interest.photos.length > 0) { %>
    <div style="margin: 12px 0;">
        <div style="display: flex; gap: 8px; align-items: center; color: #6b7280; font-size: 0.875rem;">
            <i class="fas fa-images"></i>
            <span><%= interest.photos.length %> image<%= interest.photos.length > 1 ? 's' : '' %> attached</span>
        </div>

        <!-- Render each image -->
        <div style="display: flex; gap: 8px; margin-top: 8px; flex-wrap: wrap;">
            <% interest.photos.forEach(function(photo) { %>
                <img 
                    src="/<%= photo.replace(/\\/g, '/') %>" 
                    alt="Uploaded photo" 
                    style="max-width: 150px; max-height: 150px; object-fit: cover; border-radius: 8px; border: 1px solid #ddd;"
                >
            <% }) %>
        </div>
    </div>
<% } %>


                <% if (interest.status === 'rejected' && interest.rejectionReason) { %>
                    <div class="application-meta">
                        <i class="fas fa-comment-alt"></i>
                        <span><strong>Reason:</strong> <%= interest.rejectionReason %></span>
                    </div>
                <% } %>

                <div class="application-footer">
                    <div class="application-date">
                        <i class="fas fa-calendar-alt"></i>
                        Applied on <%= interest.createdAt.toLocaleDateString('en-US', { 
                            year: 'numeric', 
                            month: 'long', 
                            day: 'numeric' 
                        }) %>
                    </div>

                    <div class="application-actions">
                        <% if (interest.status === 'pending') { %>
                            <form method="POST" action="/admin/interests/<%= interest._id %>/approve" class="inline">
                                <button type="submit" class="btn btn-approve">
                                    <i class="fas fa-check"></i> Approve
                                </button>
                            </form>
                            <button onclick="openRejectModal('<%= interest._id %>')" class="btn btn-reject">
                                <i class="fas fa-times"></i> Reject
                            </button>
                        <% } %>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
<% } %>
        </div>
    </div>

    <!-- Reject Modal -->
    <div class="modal-backdrop" id="rejectModal">
        <div class="modal">
            <div class="modal-header">
                <h5 class="modal-title">Reject Application</h5>
                <button type="button" class="modal-close" onclick="closeRejectModal()">&times;</button>
            </div>
            <div class="modal-body">
                <div class="text-center mb-4">
                    <div class="mx-auto flex items-center justify-center h-12 w-12 rounded-full bg-red-100">
                        <i class="fas fa-exclamation text-red-600"></i>
                    </div>
                </div>
                <p class="text-center text-gray-600 mb-6">Please provide a reason for rejecting this application.</p>
                <form id="rejectForm" method="POST">
                    <div class="form-group">
                        <textarea name="reason" rows="4" class="form-control" placeholder="Reason for rejection..." required></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" onclick="closeRejectModal()">Cancel</button>
                <button type="submit" form="rejectForm" class="btn btn-primary">Confirm Reject</button>
            </div>
        </div>
    </div>

    <script>
        // Toggle sidebar on mobile
        document.getElementById('menu-toggle').addEventListener('click', function() {
            document.querySelector('.sidebar').classList.toggle('menu-active');
        });

        // Filter applications by status
        document.getElementById('statusFilter').addEventListener('change', function() {
            const status = this.value;
            const applications = document.querySelectorAll('.application-card');
            
            applications.forEach(app => {
                if (status === 'all' || app.dataset.status === status) {
                    app.style.display = 'block';
                } else {
                    app.style.display = 'none';
                }
            });
        });

        // Search functionality
        document.getElementById('searchInput').addEventListener('input', function() {
            const searchTerm = this.value.toLowerCase();
            const applications = document.querySelectorAll('.application-card');
            
            applications.forEach(app => {
                const text = app.textContent.toLowerCase();
                if (text.includes(searchTerm)) {
                    app.style.display = 'block';
                } else {
                    app.style.display = 'none';
                }
            });
        });

        // Reject modal functions
        let currentApplicationId = null;
        
        function openRejectModal(applicationId) {
            currentApplicationId = applicationId;
            document.getElementById('rejectForm').action = `/admin/applications/${applicationId}/reject`;
            document.getElementById('rejectModal').classList.add('show');
        }
        
        function closeRejectModal() {
            document.getElementById('rejectModal').classList.remove('show');
            currentApplicationId = null;
        }

        // Close modal when clicking outside
        window.addEventListener('click', function(event) {
            const modal = document.getElementById('rejectModal');
            if (event.target === modal) {
                closeRejectModal();
            }
        });
    </script>
</body>
</html>