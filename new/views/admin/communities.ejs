
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Urban Ease </title>
    <link rel="stylesheet" href="/css/admin/Communities.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
   
    <link rel="stylesheet" href="/css/sidebar.css">
</head>
    <link rel="stylesheet" href="/css/sidebar.css">
</head>
<div class="container">
  <!-- Sidebar -->
  <%- include('../partials/sidebarAdmin') %>
  
  <!-- Main content -->
  <div class="main-content">
    <div class="header">
      <div class="d-flex align-items-center">
        <span class="menu-toggle" id="menu-toggle">
          <i class="fas fa-bars"></i>
        </span>
        <h1>Communities</h1>
      </div>
      <div class="header-actions">
        <button class="btn btn-primary" id="addCommunityBtn">
          <i class="fas fa-plus"></i>
          <span>Add Community</span>
        </button>
      </div>
    </div>
    
    <!-- Filters section -->
    <div class="filters-section">
      <div class="filter-item search-box">
        <input type="text" class="search-input" id="searchInput" placeholder="Search communities...">
        <i class="fas fa-search search-icon"></i>
      </div>
      <div class="filter-item">
        <select class="form-select" id="statusFilter">
          <option value="">All Statuses</option>
          <option value="Active">Active</option>
          <option value="Inactive">Inactive</option>
        </select>
      </div>
      <div class="filter-item">
        <select class="form-select" id="locationFilter">
          <option value="">All Locations</option>
          <% 
            // Get unique locations
            const locations = [];
            communities.forEach(community => {
              if (!locations.includes(community.location)) {
                locations.push(community.location);
              }
            });
          %>
          <% locations.forEach(location => { %>
            <option value="<%= location %>"><%= location %></option>
          <% }); %>
        </select>
      </div>
    </div>

    <!-- Communities table -->
    <div class="table-container">
      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th>Name</th>
              <th>Location</th>
              <th>Total Members</th>
              <th>Created Date</th>
              <th>Status</th>
              <th>Manager</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody id="communitiesTableBody">
            <% if (communities.length === 0) { %>
              <tr>
                <td colspan="7" class="text-center">No communities found</td>
              </tr>
            <% } else { %>
              <% communities.forEach(community => { %>
                <tr data-id="<%= community._id %>">
                  <td><%= community.name %></td>
                  <td><%= community.location %></td>
                  <td><%= community.totalMembers || 0 %></td>
                  <td><%= new Date(community.createdAt).toLocaleDateString() %></td>
                  <td><span class="table-status status-<%= community.status.toLowerCase() %>"><%= community.status %></span></td>
                  <td><%= community.communityManager ? community.communityManager.name : 'Unassigned' %></td>
                  <td>
                    <div class="table-actions">
                      <button class="btn btn-sm btn-icon btn-view" data-id="<%= community._id %>">
                        <i class="fas fa-eye"></i>
                      </button>
                      <button class="btn btn-sm btn-icon btn-edit" data-id="<%= community._id %>">
                        <i class="fas fa-edit"></i>
                      </button>
                      <button class="btn btn-sm btn-icon btn-delete" data-id="<%= community._id %>">
                        <i class="fas fa-trash"></i>
                      </button>
                    </div>
                  </td>
                </tr>
              <% }); %>
            <% } %>
          </tbody>
        </table>
      </div>
      
      <!-- Pagination -->
      <div class="pagination">
        <div class="page-info">
          Showing <span id="startRecord">1</span> to <span id="endRecord"><%= Math.min(communities.length, 8) %></span> of <span id="totalRecords"><%= communities.length %></span> entries
        </div>
        <div class="page-buttons" id="pagination">
          <button class="page-btn disabled" id="prevPage">
            <i class="fas fa-chevron-left"></i>
          </button>
          <!-- Page buttons will be generated by JavaScript -->
          <button class="page-btn" id="nextPage">
            <i class="fas fa-chevron-right"></i>
          </button>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Add/Edit Community Modal -->
<div class="modal-backdrop" id="communityModal">
  <div class="modal">
    <div class="modal-header">
      <h5 class="modal-title" id="modalTitle">Add New Community</h5>
      <button type="button" class="modal-close" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body">
      <form id="communityForm">
        <div class="form-group">
          <label for="communityName" class="form-label">Community Name</label>
          <input type="text" class="form-control" id="communityName" required>
        </div>
        <div class="form-group">
          <label for="communityLocation" class="form-label">Location</label>
          <input type="text" class="form-control" id="communityLocation" required>
        </div>
        <div class="form-group">
          <label for="communityDescription" class="form-label">Description</label>
          <textarea class="form-control" id="communityDescription" rows="3"></textarea>
        </div>
        <div class="form-group">
          <label for="communityManager" class="form-label">Community Manager</label>
          <select class="form-select" id="communityManager">
            <option value="">Select Manager</option>
            <!-- This would be populated from database in a real app -->
            <% /* Assuming managers is passed from the controller */ %>
            <% if (locals.managers && managers.length > 0) { %>
              <% managers.forEach(manager => { %>
                <option value="<%= manager._id %>"><%= manager.name %></option>
              <% }); %>
            <% } %>
          </select>
        </div>
        <div class="form-group">
          <label for="communityStatus" class="form-label">Status</label>
          <select class="form-select" id="communityStatus" required>
            <option value="Active">Active</option>
            <option value="Inactive">Inactive</option>
          </select>
        </div>
      </form>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
      <button type="button" class="btn btn-primary" id="saveCommunity">Save</button>
    </div>
  </div>
</div>

<!-- View Community Details Modal -->
<div class="modal-backdrop" id="viewCommunityModal">
  <div class="modal">
    <div class="modal-header">
      <h5 class="modal-title">Community Details</h5>
      <button type="button" class="modal-close" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body">
      <div id="communityDetails">
        <h3 id="detailName"></h3>
        <p><strong>Location:</strong> <span id="detailLocation"></span></p>
        <p><strong>Total Members:</strong> <span id="detailMembers"></span></p>
        <p><strong>Status:</strong> <span id="detailStatus"></span></p>
        <p><strong>Manager:</strong> <span id="detailManager"></span></p>
        <p><strong>Created Date:</strong> <span id="detailCreated"></span></p>
        <p><strong>Description:</strong></p>
        <p id="detailDescription"></p>
      </div>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      <button type="button" class="btn btn-primary" id="editFromView">Edit</button>
    </div>
  </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal-backdrop" id="deleteConfirmationModal">
  <div class="modal">
    <div class="modal-header">
      <h5 class="modal-title">Confirm Delete</h5>
      <button type="button" class="modal-close" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body">
      <p>Are you sure you want to delete <strong id="deleteCommunityName">this community</strong>?</p>
      <p class="text-danger">This action cannot be undone.</p>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
      <button type="button" class="btn btn-danger" id="confirmDelete">Delete</button>
    </div>
  </div>
</div>

<script src="/js/admin/communities.js"></script>
