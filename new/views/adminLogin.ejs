<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Community Management System - Admin Login</title>
    <style>
        /* Importing Google Fonts - Poppins */
        @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap');

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: "Poppins", sans-serif;
        }
        
        body {
            min-height: 100vh;
            background: linear-gradient(135deg, #F1FAFF 0%, #CBE4FF 100%);
            display: flex;
            justify-content: center;
            align-items: center;
            color: #2c3e50;
        }
        
        .login-container {
            background: rgba(255, 255, 255, 0.562);
            backdrop-filter: blur(10px);
            border-radius: 16px;
            box-shadow: 0 20px 60px rgba(21, 26, 45, 0.15);
            padding: 2.5rem;
            width: 100%;
            max-width: 420px;
            border: 1px solid rgba(255, 255, 255, 0.3);
            position: relative;
        }

        .login-container::before {
            content: '';
            position: absolute;
            top: -2px;
            left: -2px;
            right: -2px;
            bottom: -2px;
            background: linear-gradient(135deg, #151A2D 0%, #2c3441 100%);
            border-radius: 18px;
            z-index: -1;
            opacity: 0.1;
        }
        
        .system-logo {
            text-align: center;
            margin-bottom: 1.5rem;
        }

        .system-logo i {
            font-size: 3rem;
            background: linear-gradient(135deg, #151A2D 0%, #2c3441 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            filter: drop-shadow(0 4px 8px rgba(21, 26, 45, 0.1));
        }
        
        .login-header {
            text-align: center;
            margin-bottom: 2rem;
        }
        
        .login-header h1 {
            color: #151A2D;
            font-size: 2rem;
            font-weight: 600;
            margin-bottom: 0.75rem;
            letter-spacing: -0.5px;
        }
        
        .login-header p {
            color: #6b7280;
            font-size: 0.95rem;
            font-weight: 400;
        }
        
        .input-group {
            margin-bottom: 1.5rem;
            position: relative;
        }
        
        .input-group label {
            display: block;
            margin-bottom: 8px;
            color: #151A2D;
            font-size: 0.9rem;
            font-weight: 500;
        }
        
        .input-group input {
            width: 100%;
            padding: 12px 16px 12px 48px;
            border: 2px solid rgba(21, 26, 45, 0.1);
            border-radius: 12px;
            font-size: 1rem;
            background: white;
            transition: all 0.3s ease;
            font-family: "Poppins", sans-serif;
        }
        
        .input-group input:focus {
            outline: none;
            border-color: #151A2D;
            box-shadow: 0 0 0 3px rgba(21, 26, 45, 0.1);
        }

        .input-group input::placeholder {
            color: #9ca3af;
            font-weight: 400;
        }

        .input-icon {
    position: absolute;
    left: 16px;
    top: 50%;
    transform: translateY(50%);
    color: #6b7280;
    transition: all 0.3s ease;
    pointer-events: none; /* Optional: so it doesn't block input clicks */
}


        .input-group input:focus + .input-icon {
            color: #151A2D;
        }
        
        .forgot-password {
            text-align: right;
            margin-bottom: 1.5rem;
        }
        
        .forgot-password a {
            color: #151A2D;
            font-size: 0.9rem;
            text-decoration: none;
            font-weight: 500;
            transition: all 0.3s ease;
        }
        
        .forgot-password a:hover {
            color: #2c3441;
            text-decoration: underline;
        }
        
        .login-button {
            width: 100%;
            padding: 12px 24px;
            background: linear-gradient(135deg, #151A2D 0%, #2c3441 100%);
            color: white;
            border: none;
            border-radius: 12px;
            font-size: 1rem;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 4px 16px rgba(21, 26, 45, 0.2);
            position: relative;
            overflow: hidden;
        }

        .login-button::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
            transition: left 0.5s;
        }

        .login-button:hover::before {
            left: 100%;
        }
        
        .login-button:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 24px rgba(21, 26, 45, 0.3);
        }

        .login-button:active {
            transform: translateY(-1px);
        }

        .login-button:disabled {
            opacity: 0.7;
            cursor: not-allowed;
            transform: none;
        }
        
        .error-message {
            color: #dc2626;
            font-size: 0.85rem;
            margin-top: 0.5rem;
            display: none;
            font-weight: 500;
        }

        .alert {
            padding: 12px 16px;
            border-radius: 12px;
            margin-bottom: 1.5rem;
            font-size: 0.9rem;
            font-weight: 500;
        }

        .alert-danger {
            background: rgba(239, 68, 68, 0.1);
            color: #dc2626;
            border: 1px solid rgba(239, 68, 68, 0.2);
        }

        /* Loading spinner */
        .spinner {
            display: none;
            width: 20px;
            height: 20px;
            border: 3px solid rgba(255, 255, 255, 0.3);
            border-radius: 50%;
            border-top-color: #fff;
            animation: spin 1s ease-in-out infinite;
            margin-left: 8px;
            vertical-align: middle;
        }

        @keyframes spin {
            to { transform: rotate(360deg); }
        }

        .login-button-content {
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
            z-index: 1;
        }

        /* Password toggle functionality */
        .password-toggle {
            position: absolute;
            right: 16px;
            top: 2.4rem;
            color: #6b7280;
            cursor: pointer;
            transition: all 0.3s ease;
            padding: 4px;
            border-radius: 4px;
        }

        .password-toggle:hover {
            color: #151A2D;
            background: rgba(21, 26, 45, 0.1);
        }

        /* Responsive Design */
        @media (max-width: 640px) {
            .login-container {
                margin: 16px;
                padding: 2rem 1.5rem;
                max-width: calc(100% - 32px);
            }

            .login-header h1 {
                font-size: 1.75rem;
            }

            .system-logo i {
                font-size: 2.5rem;
            }
        }

        /* Animation for container entrance */
        @keyframes slideUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .login-container {
            animation: slideUp 0.6s ease-out;
        }

        /* Focus states improvements */
        .input-group input:focus {
            transform: translateY(-1px);
        }

        /* Enhanced visual feedback */
        .login-button:focus {
            outline: none;
            box-shadow: 0 0 0 3px rgba(21, 26, 45, 0.3);
        }
    </style>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <div class="login-container">
        <div class="system-logo">
      <img src="/imgs/logo_.png" alt="Logo" class="building-icon">
    </div>
        
        <div class="login-header">
            <h1>Admin Portal</h1>
            <p>Sign in to manage your community system</p>
        </div>
        
<% if (message && message.length > 0) { %>
        <div class="alert alert-danger">
            <%= message[0] %>
        </div>
        <% } %>
        
        <form id="login-form" action="/AdminLogin" method="POST">
            <div class="input-group">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" placeholder="admin@example.com" required>
                <i class="fas fa-envelope input-icon"></i>
                <div class="error-message" id="email-error">Please enter a valid email</div>
            </div>
            
            <div class="input-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" placeholder="Enter your password" required>
                <i class="fas fa-lock input-icon"></i>
                <i class="fas fa-eye password-toggle" id="password-toggle"></i>
                <div class="error-message" id="password-error">Please enter your password</div>
            </div>
            
            <div class="forgot-password">
                <a href="#">Forgot password?</a>
            </div>
            
            <button type="submit" class="login-button">
                <div class="login-button-content">
                    <span>Login</span>
                    <div class="spinner" id="login-spinner"></div>
                </div>
            </button>
        </form>
    </div>

    <script>
        document.getElementById('login-form').addEventListener('submit', function(event) {
            const email = document.getElementById('email').value;
            const password = document.getElementById('password').value;
            
            // Reset error messages
            document.getElementById('email-error').style.display = 'none';
            document.getElementById('password-error').style.display = 'none';
            
            // Basic validation
            let valid = true;
            
            if (!email) {
                document.getElementById('email-error').style.display = 'block';
                valid = false;
                event.preventDefault();
            } else {
                document.getElementById('email-error').style.display = 'none';
            }
            
            if (!password) {
                document.getElementById('password-error').style.display = 'block';
                valid = false;
                event.preventDefault();
            } else {
                document.getElementById('password-error').style.display = 'none';
            }
            
            if (valid) {
                // Show loading spinner
                document.getElementById('login-spinner').style.display = 'inline-block';
                document.querySelector('.login-button').disabled = true;
            }
        });

        // Enhanced password visibility toggle
        document.getElementById('password-toggle').addEventListener('click', function() {
            const passwordInput = document.getElementById('password');
            const toggleIcon = this;
            
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                toggleIcon.classList.remove('fa-eye');
                toggleIcon.classList.add('fa-eye-slash');
            } else {
                passwordInput.type = 'password';
                toggleIcon.classList.remove('fa-eye-slash');
                toggleIcon.classList.add('fa-eye');
            }
        });

        // Add input animation effects
        document.querySelectorAll('.input-group input').forEach(input => {
            input.addEventListener('focus', function() {
                this.parentElement.classList.add('focused');
            });
            
            input.addEventListener('blur', function() {
                this.parentElement.classList.remove('focused');
            });
        });
    </script>
</body>
</html>