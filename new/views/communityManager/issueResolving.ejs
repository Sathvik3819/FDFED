<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Issue Management</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Outfit:wght@100..900&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/notyf/notyf.min.css" />
    <link rel="stylesheet" href="../../css/nav.css" />
    <link
      rel="stylesheet"
      href="../../css/communityManager/issueResolving.css"
    />
  </head>

  <body>
    <%- include('../../partials/managerNav.ejs') %>

    <div class="bodyContainer">
      <!-- AD SECTION -->
      <div class="adCon d-flex justify-content-center align-items-center">
        <div class="advertisement" id="ad-slider">
          <% if (locals.ads && ads.filter(ad=> ad.status==="Active").length > 0)
          { %> <% ads.filter(ad=> ad.status==="Active").forEach(ad => { %>
          <img
            src="http://localhost:3000/<%= ad.imagePath.replace(/\\/g, '/') %>"
            class="ad-slide"
            alt="Ad"
            height="100px"
            width="200px"
          />
          <% }) %> <% } else { %>
          <div
            class="d-flex justify-content-center align-items-center"
            style="
              background-color: rgba(158, 207, 250, 0.539);
              border-radius: 8px;
              color: rgb(0, 80, 193);
              border: 3px dotted blue;
              height: 100%;
              width: 100%;
            "
          >
            <p class="ad-text fs-4" style="font-weight: 600">Advertisement</p>
          </div>
          <% } %>
        </div>
      </div>

      <!-- CONTENT SECTION -->
      <div class="contentCon">
        <div class="page-header">
          <div class="page-title">Assign and Resolve Issues</div>
        </div>

        <!-- Tabs -->
        <div class="tabs">
          <div class="tab active" id="assign-tab">Assign Issues</div>
          <div class="tab" id="history-tab">Assigned History</div>
        </div>

        <!-- Assign Issues Card (Visible by default) -->
        <div class="card" id="assign-card">
          <div class="issues-container">
            <div>
              <h3 class="card-title">Current Issues</h3>
              <div class="issue-list-cards">
                <% if (locals.issues && issues.length> 0) { %> <% let
                hasCurrentIssues=false; %> <% issues.forEach((i)=> { %> <% if
                (i.status==="Assigned" || i.status==="Pending" ) { %> <%
                hasCurrentIssues=true; %>
                <div class="issue-card">
                  <div class="issue-card-header">
                    <span class="issue-card-id"
                      >Issue ID: <%= i.issueID %></span
                    >
                    <span class="status-<%= i.status %>">
                      <%= i.status %>
                    </span>
                  </div>
                  <div class="issue-card-content">
                    <h4 class="issue-card-title"><%= i.title %></h4>
                    <p class="issue-card-reporter">
                      Reported by: <%= i.resident?.residentFirstname %> <%=
                      i.resident?.residentLastname %>
                    </p>
                  </div>
                  <div class="issue-card-actions">
                    <% if (!i.workerAssigned) { %>
                    <button
                      class="btn btn-primary btn-sm assign-btn"
                      data-id="<%= i._id %>"
                    >
                      Assign
                    </button>
                    <% } else { %>
                    <button class="btn btn-sm assign-btn disabled" disabled>
                      Assigned
                    </button>
                    <% } %>
                  </div>
                </div>
                <% } %> <% }) %> <% if (!hasCurrentIssues) { %>
                <div class="no-issues-message">
                  <p class="mb-0">No current issues to display.</p>
                </div>
                <% } %> <% } else { %>
                <div class="no-issues-message">
                  <p class="mb-0">No current issues to display.</p>
                </div>
                <% } %>
              </div>
            </div>

            <!-- Assign Issue Popup -->
            <div id="assignPopup" class="popup" style="display: none">
              <div class="popup-content">
                <button
                  class="close-btn"
                  onclick="closeForm('assign')"
                  aria-label="Close"
                >
                  <i class="bi bi-x-lg"></i>
                </button>
                <h3 class="card-title">Assign Issue</h3>
                <form
                  id="issueAssignForm"
                  action="/manager/issue/assign"
                  method="POST"
                >
                  <input type="text" id="idIssue" name="id" hidden />

                  <div class="form-group">
                    <label for="issueID">Issue ID</label>
                    <input
                      type="text"
                      id="issueID"
                      class="form-control"
                      name="issueID"
                      readonly
                    />
                  </div>

                  <div class="form-group">
                    <label for="workerAssigned">Assign to Worker</label>
                    <select
                      id="workerAssigned"
                      class="form-control"
                      name="worker"
                      required
                    >
                      <option value="" disabled selected>
                        Select a Worker
                      </option>
                      <% if (locals.workers) { %> <% workers.forEach(w=> { %>
                      <option value="<%= w._id %>">
                        <%= w.name %> - <%= w.jobRole %>
                      </option>
                      <% }) %> <% } %>
                    </select>
                  </div>

                  <div class="form-group">
                    <label for="deadline">Deadline</label>
                    <input
                      type="date"
                      id="deadline"
                      class="form-control"
                      name="deadline"
                    />
                  </div>

                  <div class="form-group">
                    <label for="remarks">Remarks</label>
                    <textarea
                      id="remarks"
                      class="form-control"
                      rows="3"
                      name="remarks"
                      required
                    ></textarea>
                  </div>

                  <div class="action-buttons">
                    <span id="cancelAssign" class="btn btn-secondary">
                      <i class="bi bi-x-circle"></i> Cancel
                    </span>
                    <button type="submit" class="btn btn-primary">
                      <i class="bi bi-send-check"></i> Assign Task
                    </button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>

        <!-- Assigned History Card (Hidden by default) -->
        <div class="card" id="history-card" style="display: none">
          <div class="card-title">Assigned Issues History</div>
          <div class="issue-list-cards" id="history-cards-container">
            <% if (locals.issues) { %> <% issues.forEach((i)=> { %> <% if
            (i.status==="Resolved" || i.status==="Assigned" ||
            i.status==="Payment Pending" ) { %>
            <div class="issue-card">
              <div class="issue-card-header">
                <span class="issue-card-id">Issue ID: <%= i.issueID %></span>
                <span class="status-<%= i.status.replace(/\s+/g, '') %>">
                  <%= i.status %>
                </span>
              </div>
              <div class="issue-card-content">
                <h4 class="issue-card-title"><%= i.title %></h4>
                <p class="issue-card-reporter">
                  Worker: <%= i?.workerAssigned?.name %>
                </p>
                <p class="issue-card-date">
                  Completion Date: <%= new Date(i.resolvedAt).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) || "-" %>
                </p>
              </div>
              <div class="issue-card-actions">
                <button
                  class="btn btn-secondary btn-sm view-btn"
                  data-id="<%= i._id %>"
                >
                  View Details
                </button>
              </div>
            </div>
            <% }%> <% }) %> <% } %>
          </div>
        </div>
      </div>
    </div>

    <div id="bookingDetailsPopup" class="popup" style="display: none">
      <div class="popup-content booking-details-card">
        <div class="popup-header">
          <div class="d-flex justify-content-between align-items-center w-100">
            <div>
              <h4 class="popup-main-title">Issue Details</h4>
              <p class="popup-tracking-id">
                Tracking ID: <span id="popupTrackingId"></span>
              </p>
            </div>
            <div class="w-25" style="height: 100%">
              <span class="status-badge text-center" id="popupStatus"
                >Resolved</span
              >
            </div>
          </div>
          <span class="close-btn" id="close-btn" >&times;</span>
        </div>
        <div class="issue-details">
          <div
            class="status-progress position-relative d-flex justify-content-between w-100 align-items-start p-3 my-4"
          >
            <div class="progress-line">
              <div class="progress-indicator"></div>
            </div>
            <div
              class="position-absolute d-flex justify-content-between align-items-center w-75"
              style="left: 12%; top: 5px"
            >
              <div class="step">
                <div
                  class="w-6 h-6 rounded-full flex items-center justify-center z-10 step-icon step-icon-completed"
                >
                  <i class="bi bi-check"></i>
                </div>
                <span class="step-label">Pending</span>
              </div>

              <div class="step">
                <div
                  class="w-6 h-6 rounded-full flex items-center justify-center z-10 step-icon step-icon-completed"
                >
                  <i class="bi bi-check"></i>
                </div>
                <span class="step-label">Assigned</span>
              </div>

              <div class="step">
                <div
                  class="w-6 h-6 rounded-full flex items-center justify-center z-10 step-icon"
                >
                  <i class="bi bi-check"></i>
                </div>
                <span class="step-label">In Progress</span>
              </div>

              <div class="step">
                <div
                  class="w-6 h-6 rounded-full flex items-center justify-center z-10 step-icon"
                >
                  <i class="bi bi-check"></i>
                </div>
                <span class="step-label">Review Pending</span>
              </div>

              <div class="step">
                <div
                  class="w-6 h-6 rounded-full flex items-center justify-center z-10 step-icon"
                >
                  <i class="bi bi-check"></i>
                </div>

                <span class="step-label">Payment pending</span>
              </div>
              <div class="step">
                <div
                  class="w-6 h-6 rounded-full flex items-center justify-center z-10 step-icon"
                >
                  <i class="bi bi-check"></i>
                </div>
                <span class="step-label">Paid</span>
              </div>
            </div>
          </div>

          <div class="issue-details-con">
            <div class="detail-row">
              <div class="detail-label">Category:</div>
              <div class="detail-value" id="popupTitle">
                Emergency Plumbing Issue
              </div>
            </div>

            <div class="detail-row">
              <div class="detail-label">Description:</div>
              <div class="detail-value" id="popupDescription">
                There was a major water leak in the bathroom that was causing
                flooding. Immediate attention was required to prevent water
                damage to the apartment below.
              </div>
            </div>
            <div class="detail-row">
              <div class="detail-label">Date Reported:</div>
              <div class="detail-value" id="popupDate">2023-06-15</div>
            </div>
            <div class="detail-row">
              <div class="detail-label">Deadline:</div>
              <div class="detail-value" id="popupDeadline">2023-06-15</div>
            </div>
          </div>

          <div class="worker-details" id="workerDetails">
            <h4>Worker Details</h4>
            <div class="detail-row">
              <div class="detail-label">Name:</div>
              <div class="detail-value" id="popupWorkerName">Sunil Patel</div>
            </div>
            <div class="detail-row">
              <div class="detail-label">Contact:</div>
              <div class="detail-value" id="popupWorkerContact">
                +91 9876543210
              </div>
            </div>
            <div class="detail-row">
              <div class="detail-label">Specialization:</div>
              <div class="detail-value" id="popupWorkerSpecialization">
                Plumbing & Emergency Repairs
              </div>
            </div>
          </div>

          <div class="feedback-details" >
            <h4>Feedback</h4>
            <div class="detail-row">
              <div class="detail-label">Rating:</div>
              <div class="detail-value" id="popupRating"></div>
            </div>
            <div class="detail-row">
              <div class="detail-label">Comments:</div>
              <div class="detail-value" id="popupComments"></div>
            </div>
          </div>

          <div class="payment-details">
            <h4>Payment Details</h4>
            <div class="detail-row">
              <div class="detail-label">Amount:</div>
              <div class="detail-value" id="popupAmount">â‚¹1500</div>
            </div>
            <div class="detail-row">
              <div class="detail-label">Payment Status:</div>
              <div class="status-badge status-Resolved" id="popupPaymentStatus">
                Completed
              </div>
            </div>
            <div id="afterPayment"></div>
          </div>
        </div>
        <div class="action-buttons">
          <button class="btn btn-cancel" id="cancelBtn" onclick="cancelIssue()">
            Cancel Issue
          </button>
        </div>
      </div>
    </div>

    <script src="../../js/communityManager/issueResolving.js"></script>
    <script src="../../js/sidebar.js"></script>
  </body>
</html>
