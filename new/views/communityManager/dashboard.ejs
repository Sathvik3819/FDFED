<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Facility Booking Dashboard</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Outfit:wght@100..900&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="../../css/nav.css" />

    <style>
      :root {
        --transition: all 0.3s ease;
        --border-radius: 12px;
        --shadow: 0 4px 12px rgba(0, 0, 0, 0.08);
        --primary: #0d6efd;
        --secondary: #fd7e14;
        --gray: #6c757d;
      }
      
      /* NEW STYLES for Stat Cards */
      .info-card {
        border: 1px solid #e5e7eb !important;
        border-radius: 0.75rem !important; /* 12px */
        box-shadow: 0 1px 2px 0 rgb(0 0 0 / 0.05) !important;
        background: white;
        transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
        height: 100%;
      }

      .info-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1) !important;
      }

      .info-card .card-body {
        padding: 1.5rem 1.5rem 1rem 1.5rem ;
      }

      .card-label {
        font-size: 0.875rem; /* 14px */
        font-weight: 500;
        color: #6b7280; /* gray-500 */
        margin-bottom: 0.25rem;
      }

      .card-value {
        font-size: 1.875rem; /* 30px */
        line-height: 2.25rem;
        font-weight: 700;
        color: #111827 !important; /* gray-900 */
      }

      .icon-wrapper {
        height: 50px;
        width: 50px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 9999px; /* rounded-full */
      }

      .activity-entry {
        background-color: white;
        border-radius: 8px;
        border: 1px solid #e9ecef;
        position: relative;
        padding: 15px 20px;
        margin-bottom: 20px;
        transition: var(--transition);
      }

      .activity-entry:hover {
        transform: translateX(5px);
      }

      .nav-link {
        cursor: pointer;
        font-weight: 500;
        padding: 8px 15px !important;
        border-radius: 8px;
        transition: var(--transition);
      }

      .nav-link:hover {
        color: var(--secondary) !important;
        background-color: #fff5f0;
      }

      .nav-link.active {
        color: var(--secondary) !important;
        border-bottom: 3px solid var(--secondary);
      }

      .add-member-section {
        background: linear-gradient(135deg, #fff8f5, #fff0e8);
        border: 2px solid var(--secondary);
        border-radius: var(--border-radius);
        font-size: 1.25rem;
        padding: 20px;
        font-weight: 600;
        color: #e65100;
        display: flex;
        align-items: center;
        gap: 15px;
        transition: var(--transition);
        cursor: pointer;
      }

      .add-member-section:hover {
        background: linear-gradient(135deg, #fff0e8, #ffe8e0);
        transform: translateY(-3px);
        box-shadow: 0 6px 15px rgba(255, 107, 53, 0.2);
      }

      .add-member-section i {
        background: var(--secondary);
        color: white;
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
      }

      .section-title {
        position: relative;
        padding-bottom: 15px;
        margin-bottom: 25px;
        border-bottom: 2px solid #e9ecef;
      }

      .section-title::after {
        content: "";
        position: absolute;
        bottom: -2px;
        left: 0;
        width: 120px;
        height: 3px;
        background: linear-gradient(90deg, var(--primary), var(--secondary));
        border-radius: 3px;
      }

      .stats-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 20px;
        margin-bottom: 30px;
        grid-column: 1 / -1;
      }

      .activity-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 30px;
      }

      .activity-container {
        background: white;
        border-radius: var(--border-radius);
        padding: 25px;
        box-shadow: var(--shadow);
      }

      .activity-title {
        display: flex;
        align-items: center;
        gap: 10px;
        margin-bottom: 25px;
      }

      .activity-title h2 {
        font-size: 1.8rem;
        color: var(--primary);
        margin: 0;
      }

      @media (max-width: 992px) {
        .stats-grid {
          grid-template-columns: repeat(2, 1fr);
        }

        .activity-grid {
          grid-template-columns: 1fr;
        }

        .bodyContainer {
          grid-template-columns: 1fr;
        }

        .adCon {
          height: auto;
          position: relative;
          top: 0;
        }

        .ad-text {
          transform: rotate(0);
          padding: 30px;
        }
      }

      @media (max-width: 768px) {
        .stats-grid {
          grid-template-columns: 1fr;
        }

        nav ul {
          gap: 10px !important;
          flex-wrap: wrap;
          justify-content: center;
        }
      }

      .badge-entry {
        position: absolute;
        right: 15px;
        top: 15px;
        font-size: 0.8rem;
        padding: 5px 10px;
        border-radius: 20px;
      }

      .Booked {
        background-color: #007bff;
        color: white;
      }

      .Pending {
        background-color: #ffc107;
        color: white;
      }

      .Assigned {
        background-color: #17a2b8;
        color: white;
      }

      .Paid {
        background-color: #28a745;
        color: white;
      }
    </style>
  </head>

  <body>
    <%- include('../../partials/managerNav.ejs') %>

    <div class="bodyContainer">
      <!-- AD SECTION -->
      <div class="adCon d-flex justify-content-center align-items-center">
        <div class="advertisement" id="ad-slider">
          <% if (locals.ads && ads.filter(ad => ad.status==="Active").length >
          0) { %> <% ads.filter(ad => ad.status==="Active").forEach(ad => { %>
          <img
            src="http://localhost:3000/<%= ad.imagePath.replace(/\\/g, '/') %>"
            class="ad-slide"
            alt="Ad"
            height="100px"
            width="200px"
          />
          <% }) %> <% } else { %>
          <div
            class="d-flex justify-content-center align-items-center"
            style="
              background-color: rgba(158, 207, 250, 0.539);
              border-radius: 8px;
              color: rgb(0, 80, 193);
              border: 3px dotted blue;
              height: 100%;
              width: 100%;
            "
          >
            <p class="ad-text fs-4" style="font-weight: 600">Advertisement</p>
          </div>
          <% } %>
        </div>
      </div>

      <!-- CONTENT SECTION -->
      <div class="contentCon">
        <h1 class="mb-4">Community Dashboard</h1>

        <div class="activity-grid">
          <div class="stats-grid">
            <!-- Total Members -->
            <div class="card info-card">
              <div class="card-body d-flex align-items-start gap-4">
                  <div class="icon-wrapper bg-success-subtle">
                      <i class="bi bi-people-fill fs-4 text-success"></i>
                  </div>
                  <div>
                      <div class="card-label">Total Members</div>
                      <div class="card-value"><%= totalResidents %></div>
                  </div>
              </div>
            </div>

            <!-- Active Issues -->
            <div class="card info-card">
                <div class="card-body d-flex align-items-start gap-4">
                    <div class="icon-wrapper bg-primary-subtle">
                        <i class="bi bi-exclamation-triangle-fill fs-4 text-primary"></i>
                    </div>
                    <div>
                        <div class="card-label">Active Issues</div>
                        <div class="card-value"><%= pendingIssues %></div>
                    </div>
                </div>
            </div>

            <!-- Pending Payments -->
            <div class="card info-card">
                <div class="card-body d-flex align-items-start gap-3">
                    <div class="icon-wrapper bg-warning-subtle">
                         <i class="bi bi-currency-rupee fs-4 text-warning"></i>
                    </div>
                    <div>
                        <div class="card-label">Pending Payments</div>
                        <div class="card-value"><%= pendingIssues %></div>
                    </div>
                </div>
            </div>

            <!-- Common Space Requests -->
            <div class="card info-card">
                <div class="card-body d-flex align-items-start gap-2">
                    <div class="icon-wrapper bg-danger-subtle">
                        <i class="bi bi-calendar-event-fill fs-5 text-danger"></i>
                    </div>
                    <div>
                        <div class="card-label">Space Requests</div>
                        <div class="card-value"><%= pendingCommonSpacesBookings %></div>
                    </div>
                </div>
            </div>
          </div>
          <div class="activity-container w-100">
            <div class="activity-title">
              <i class="bi bi-activity fs-3 text-primary"></i>
              <h2>Issue Action center</h2>
            </div>

            <div id="activity-list">
              <% if (locals.Iactions && locals.Iactions.length > 0) { %> <%
              locals.Iactions.forEach(activity => { %>
              <div
                class="activity-entry shadow-sm cursor-pointer "
                data-type="<%= activity.status %>"
                onclick="window.location.href='/manager/issueResolving'"
              >
                <span class="badge-entry <%= activity.status %>"
                  ><%= activity.status %></span
                >
                <h5 class="mb-1"><%= activity.name || activity.title %></h5>
                <p class="mb-0"><%= activity.purpose %></p>
                <small class="entry-time text-muted"
                  >raised by <%= activity.resident?.residentFirstname %> <%=
                  activity.resident?.residentLastname %> </small
                >
              </div>
              <% }) %> <% } else { %>
              <p>No actions required</p>
              <% } %>
            </div>
          </div>
          <div class="activity-container w-100">
            <div class="activity-title">
              <i class="bi bi-activity fs-3 text-primary"></i>
              <h2>Common space Action center</h2>
            </div>

            <div id="activity-list">
              <% if (locals.Cactions && locals.Cactions.length > 0) { %> <%
              locals.Cactions.forEach(activity => { %>
              <div
                class="activity-entry shadow-sm cursor-pointer "
                data-type="<%= activity.status %>"
                onclick="window.location.href='/manager/commonSpace'"
              >
                <span class="badge-entry <%= activity.status %>"
                  ><%= activity.status %></span
                >
                <div></div>
                <h5 class="mb-1"><%= activity.name || activity.title %></h5>
                <p class="mb-0"><%= activity.purpose %></p>
                <small class="entry-time text-muted"
                  > request by <%=
                  activity.bookedBy?.residentFirstname %> <%=
                  activity.bookedBy?.residentLastname %></small
                >
                <small> , <%= activity.from %> - <%= activity.to %></small>
              </div>
              <% }) %> <% } else { %>
              <p>No actions required</p>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script src="../../js/sidebar.js"></script>
    <script src="/chartjs/chart.umd.js"></script>
    <script src="/js/communityManager/dashboard.js"></script>
  </body>
</html>