<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Pre Approvals Dashboard</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Outfit:wght@100..900&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/../../css/nav.css" />
    <style>
      .section-title {
        position: relative;
        padding-bottom: 15px;
        margin-bottom: 25px;
        border-bottom: 2px solid #e9ecef;
      }

      .section-title::after {
        content: "";
        position: absolute;
        bottom: -2px;
        left: 0;
        width: 120px;
        height: 3px;
        background: linear-gradient(90deg, var(--primary), var(--secondary));
        border-radius: 3px;
      }

      .advertisement {
        height: 100%;
        width: 100%;
        border: 3px dashed #8ac5ff;
        background-color: #45a2ff15;
        border-radius: var(--border-radius);
        display: flex;
        justify-content: center;
        align-items: center;
        transition: var(--transition);
      }

      .advertisement:hover {
        background-color: #45a2ff25;
        transform: rotate(1deg);
      }

      .ad-text {
        transform: rotate(270deg);
        font-size: 2rem;
        font-weight: 700;
        color: #45a2ff;
        letter-spacing: 3px;
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.1);
      }

      /* Tab Styles */
      .approval-tabs {
        display: flex;
        margin-bottom: 20px;
        border-bottom: 1px solid #dee2e6;
      }

      .approval-tab {
        padding: 12px 20px;
        cursor: pointer;
        font-weight: 500;
        color: var(--gray);
        transition: var(--transition);
        border-bottom: 3px solid transparent;
        text-align: center;
        flex: 1;
      }

      .approval-tab.active {
        color: var(--primary);
        border-bottom-color: var(--primary);
        background-color: var(--primary-light);
      }

      .approval-tab:hover:not(.active) {
        background-color: rgba(0, 0, 0, 0.03);
      }

      /* Table Styles */
      .table-container {
        margin-bottom: 2rem;
        padding: 1.5rem;
        background: #fff;
        border-radius: var(--border-radius);
        box-shadow: var(--shadow);
        border: 1px solid #eaeaea;
        transition: var(--transition);
      }

      .table-container:hover {
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
      }

      .table th {
        background: var(--primary);
        color: white;
        font-weight: 500;
        position: sticky;
        top: 0;
      }

      .table-hover tbody tr:hover {
        background-color: rgba(13, 110, 253, 0.05);
        cursor: pointer;
      }

      .action-btn {
        padding: 6px 12px;
        border-radius: 4px;
        font-size: 14px;
        transition: var(--transition);
        display: inline-flex;
        align-items: center;
        gap: 5px;
      }

      .action-btn.approve {
        background-color: var(--success);
        color: white;
        border: none;
        margin-right: 5px;
      }

      .action-btn.reject {
        background-color: var(--danger);
        color: white;
        border: none;
      }

      .action-btn:hover {
        opacity: 0.9;
        transform: translateY(-2px);
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      }

      /* Popup Styles */
      .popup {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        backdrop-filter: blur(5px);
        background-color: rgba(0, 0, 0, 0.4);
        justify-content: center;
        align-items: center;
        z-index: 2000;
      }

      .popup-content {
        background: white;
        padding: 30px;
        width: 450px;
        max-height: 90vh;
        overflow-y: auto;
        border-radius: var(--border-radius);
        position: relative;
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2);
        animation: popupFadeIn 0.3s ease-out;
      }

      @keyframes popupFadeIn {
        from {
          opacity: 0;
          transform: translateY(-20px);
        }

        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      .form-title {
        text-align: center;
        margin-bottom: 25px;
        color: var(--primary);
        font-weight: 600;
        position: relative;
        padding-bottom: 15px;
      }

      .form-title::after {
        content: "";
        position: absolute;
        bottom: 0;
        left: 50%;
        transform: translateX(-50%);
        width: 80px;
        height: 4px;
        background: linear-gradient(90deg, var(--primary), var(--secondary));
        border-radius: 4px;
      }

      .close-btn {
        position: absolute;
        top: 15px;
        right: 20px;
        font-size: 28px;
        color: var(--danger);
        cursor: pointer;
        transition: var(--transition);
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
      }

      .close-btn:hover {
        color: #bd2130;
        background-color: rgba(220, 53, 69, 0.1);
        transform: rotate(90deg);
      }

      .detail-item {
        margin-bottom: 15px;
        padding-bottom: 15px;
        border-bottom: 1px solid #eee;
      }

      .detail-item:last-child {
        border-bottom: none;
      }

      .detail-label {
        font-weight: 500;
        color: var(--gray);
        margin-bottom: 5px;
      }

      .detail-value {
        font-size: 1.1rem;
      }

      @media (max-width: 992px) {
        .bodyContainer {
          grid-template-columns: 1fr;
        }

        .adCon {
          height: auto;
          position: relative;
          top: 0;
          margin-bottom: 20px;
        }

        .ad-text {
          transform: rotate(0);
          padding: 30px;
        }
      }

      @media (max-width: 768px) {
        nav ul {
          gap: 10px !important;
          flex-wrap: wrap;
          justify-content: center;
        }

        .approval-tabs {
          flex-direction: column;
        }

        .approval-tab {
          border-bottom: none;
          border-left: 3px solid transparent;
        }

        .approval-tab.active {
          border-left-color: var(--primary);
        }
      }
    </style>
  </head>

  <body>
    <%- include('../../partials/securityNav.ejs') %>

    <div class="bodyContainer">
      <!-- AD SECTION -->
      <div class="adCon d-flex justify-content-center align-items-center">
        <div class="advertisement">
          <p class="ad-text">Advertisement</p>
        </div>
      </div>

      <!-- CONTENT SECTION -->
      <div class="contentCon">
        <h4 class="section-title">Pre Approval Requests</h4>

        <!-- Approval Tabs -->
        <div class="approval-tabs">
          <div class="approval-tab active" data-tab="requests">
            Pending Requests
          </div>
          <div class="approval-tab" data-tab="approved">Approved</div>
          <div class="approval-tab" data-tab="rejected">Rejected</div>
        </div>

        <!-- Requests Table -->
        <div class="table-container" id="tab-requests">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Name</th>
                <th>Requested By</th>
                <th>Purpose</th>
                <th>Visit Date</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% if (locals.pa) { %> <% pa.forEach(p=> { %> <% if
              (p.status==="pending" ) { %>
              <tr
                class="visitor-row"
                data-id="<%= p._id %>"
                data-name="<%= p.visitorName %>"
                data-contact="<%= p.contactNumber %>"
                data-date="<%= p.dateOfVisit %>"
                data-ID="<%= p._id %>"
                data-requested="<%= p.approvedBy.residentFirstname + ' ' + p.approvedBy.residentLastname %>"
                data-purpose="<%= p.purpose %>"
              >
                <td><%= p.visitorName %></td>
                <td>
                  <%= p.approvedBy.residentFirstname %> <%=
                  p.approvedBy.residentLastname %>
                </td>
                <td><%= p.purpose %></td>
                <td><%= p.dateOfVisit %>, <%= p.timeOfVisit %></td>
                <td>
                  <button class="action-btn approve">
                    <i class="bi bi-check-circle"></i> Approve
                  </button>
                  <button class="action-btn reject">
                    <i class="bi bi-x-circle"></i> Reject
                  </button>
                </td>
              </tr>
              <% } %> <% }) %> <% } %>
            </tbody>
          </table>
        </div>

        <!-- Approved Table -->
        <div class="table-container d-none" id="tab-approved">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Name</th>
                <th>Requested By</th>
                <th>Purpose</th>
                <th>Visit Date</th>
                <th>Status</th>
              </tr>
            </thead>
            <tbody>
              <% if (locals.pa) { %> <% pa.forEach(p=> { %> <% if
              (p.status==="approved" ) { %>
              <tr class="visitor-row">
                <td><%= p.visitorName %></td>
                <td>
                  <%= p.approvedBy.residentFirstname %> <%=
                  p.approvedBy.residentLastname %>
                </td>
                <td><%= p.purpose %></td>
                <td><%= p.dateOfVisit %> , <%= p.timeOfVisit %></td>
                <td><span class="badge bg-success">Approved</span></td>
              </tr>
              <% } %> <% }) %> <% } %>
            </tbody>
          </table>
        </div>

        <!-- Rejected Table -->
        <div class="table-container d-none" id="tab-rejected">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Name</th>
                <th>Requested By</th>
                <th>Purpose</th>
                <th>Visit Date</th>
                <th>Status</th>
              </tr>
            </thead>
            <tbody>
              <% if (locals.pa) { %> <% pa.forEach(p=> { %> <% if
              (p.status==="rejected" ) { %>
              <tr
                class="visitor-row"
                data-id="<%= p._id %>"
                data-name="<%= p.visitorName %>"
                data-contact="<%= p.contactNumber %>"
                data-requested="<%= p.approvedBy.residentFirstname %> <%= p.approvedBy.residentLastname %>"
                data-purpose="<%= p.purpose %>"
                data-date="<%= p.dateOfVisit %>"
                data-vehicle="<%= p.vehicleNumber %>"
              >
                <td><%= p.visitorName %></td>
                <td>
                  <%= p.approvedBy.residentFirstname %> <%=
                  p.approvedBy.residentLastname %>
                </td>
                <td><%= p.purpose %></td>
                <td><%= p.dateOfVisit %> , <%= p.timeOfVisit %></td>
                <td><span class="badge bg-danger">Rejected</span></td>
              </tr>
              <% } %> <% }) %> <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <!-- Visitor Details Popup -->
    <div id="visitorPopup" class="popup">
      <div class="popup-content">
        <span class="close-btn" onclick="closePopup()">&times;</span>
        <h3 class="form-title">Visitor Details</h3>

        <div class="detail-item">
          <div class="detail-label">Name</div>
          <div class="detail-value" id="popupName"></div>
        </div>

        <div class="detail-item">
          <div class="detail-label">Contact Number</div>
          <div class="detail-value" id="popupContact"></div>
        </div>

        <div class="detail-item">
          <div class="detail-label">Requested By</div>
          <div class="detail-value" id="popupRequested"></div>
        </div>

        <div class="detail-item">
          <div class="detail-label">Purpose</div>
          <div class="detail-value" id="popupPurpose"></div>
        </div>

        <div class="detail-item">
          <div class="detail-label">Visit Date</div>
          <div class="detail-value" id="popupDate"></div>
        </div>

        <div class="detail-item hidden">
          <div class="detail-label">ID</div>
          <div class="detail-value" id="popupID"></div>
        </div>

        <div class="detail-item">
          <div class="detail-label">Vehicle Number</div>
          <input class="detail-value" id="popupVehicle" type="text" />
        </div>

        <div class="d-flex justify-content-between mt-4">
          <button class="action-btn approve" id="approveBtn">
            <i class="bi bi-check-circle"></i> Approve
          </button>
          <button class="action-btn reject" id="rejectBtn">
            <i class="bi bi-x-circle"></i> Reject
          </button>
        </div>
      </div>
    </div>

    <script src="../../js/security/preApproval.js"></script>
  </body>
</html>
