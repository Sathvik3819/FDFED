<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Pre Approvals Dashboard</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Outfit:wght@100..900&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/../../css/nav.css" />
    <style>
     

      body {
        font-family: 'Outfit', sans-serif;
        background-color: #f5f7fa;
      }

      .section-title {
        position: relative;
        padding-bottom: 15px;
        margin-bottom: 25px;
        border-bottom: 2px solid #e9ecef;
      }

      .section-title::after {
        content: "";
        position: absolute;
        bottom: -2px;
        left: 0;
        width: 120px;
        height: 3px;
        background: linear-gradient(90deg, var(--primary), var(--secondary));
        border-radius: 3px;
      }

      /* Tab Styles */
      .approval-tabs {
        display: flex;
        margin-bottom: 20px;
        border-bottom: 1px solid #dee2e6;
        overflow-x: auto;
        scrollbar-width: none; 
      }

      .approval-tabs::-webkit-scrollbar {
        display: none;
      }

      .approval-tab {
        padding: 12px 20px;
        cursor: pointer;
        font-weight: 500;
        color: var(--gray);
        transition: var(--transition);
        border-bottom: 3px solid transparent;
        text-align: center;
        flex: 1;
        min-width: 150px;
        white-space: nowrap;
      }

      .approval-tab.active {
        color: var(--primary);
        border-bottom-color: var(--primary);
        background-color: var(--primary-light);
      }

      .approval-tab:hover:not(.active) {
        background-color: rgba(0, 0, 0, 0.03);
      }

      /* Card Styles */
      .cards-container {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 20px;
        margin-bottom: 2rem;
      }

      .visitor-card {
        background: #fff;
        border-radius: var(--border-radius);
        box-shadow: var(--shadow);
        border: 1px solid #eaeaea;
        transition: var(--transition);
        overflow: hidden;
      }

      .visitor-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
      }

      .card-header {
        background: rgba(255, 68, 0, 0.203);
        color: rgb(43, 43, 43);
        padding: 15px;
        font-weight: 500;
        display: flex;
        justify-content: space-between;
        align-items: center;
      }

      .card-body {
        padding: 20px;
      }

      .detail-row {
        display: flex;
        margin-bottom: 12px;
      }

      .detail-label {
        font-weight: 500;
        color: var(--gray);
        min-width: 120px;
      }

      .detail-value {
        flex: 1;
      }

      .card-footer {
        padding: 15px 20px;
        background-color: #f8f9fa;
        border-top: 1px solid #eaeaea;
        display: flex;
        justify-content: space-between;
      }

      .status-badge {
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 14px;
        font-weight: 500;
      }

      .badge-pending {
        background-color: #fff3cd;
        color: #856404;
      }

      .badge-approved {
        background-color: #d4edda;
        color: #155724;
      }

      .badge-rejected {
        background-color: #f8d7da;
        color: #721c24;
      }

      .action-btn {
        padding: 6px 12px;
        border-radius: 4px;
        font-size: 14px;
        transition: var(--transition);
        display: inline-flex;
        align-items: center;
        gap: 5px;
      }

      .action-btn.approve {
        background-color: var(--success);
        color: white;
        border: none;
        margin-right: 5px;
      }

      .action-btn.reject {
        background-color: var(--danger);
        color: white;
        border: none;
      }

      .action-btn:hover {
        opacity: 0.9;
        transform: translateY(-2px);
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      }

      /* Popup Styles */
      .popup {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        backdrop-filter: blur(5px);
        background-color: rgba(0, 0, 0, 0.4);
        justify-content: center;
        align-items: center;
        z-index: 2000;
      }

      .popup-content {
        background: white;
        padding: 30px;
        width: 450px;
        max-height: 90vh;
        overflow-y: auto;
        border-radius: var(--border-radius);
        position: relative;
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2);
        animation: popupFadeIn 0.3s ease-out;
      }

      @keyframes popupFadeIn {
        from {
          opacity: 0;
          transform: translateY(-20px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      .form-title {
        text-align: center;
        margin-bottom: 25px;
        color: var(--primary);
        font-weight: 600;
        position: relative;
        padding-bottom: 15px;
      }

      .form-title::after {
        content: "";
        position: absolute;
        bottom: 0;
        left: 50%;
        transform: translateX(-50%);
        width: 80px;
        height: 4px;
        background: linear-gradient(90deg, var(--primary), var(--secondary));
        border-radius: 4px;
      }

     .close-btn {
    position: absolute;
    top: 10px;
    right: 15px;
    font-size: 22px;
    font-weight: bold;
    cursor: pointer;
    color: var(--text-light);
    transition: 0.3s ease-in-out;
    padding: 25px;
}

.close-btn:hover {
    color: var(--primary-color);
}

      .detail-item {
        margin-bottom: 15px;
        padding-bottom: 15px;
        border-bottom: 1px solid #eee;
      }

      .detail-item:last-child {
        border-bottom: none;
      }

      .detail-label {
        font-weight: 500;
        color: var(--gray);
        margin-bottom: 5px;
      }

      .detail-value {
        font-size: 1.1rem;
      }

      /* Empty State */
      .empty-state {
        text-align: center;
        padding: 40px 20px;
        background: white;
        border-radius: var(--border-radius);
        box-shadow: var(--shadow);
      }

      .empty-state i {
        font-size: 60px;
        color: var(--gray);
        margin-bottom: 20px;
        opacity: 0.5;
      }

      .empty-state h4 {
        color: var(--gray);
        margin-bottom: 10px;
      }

      .empty-state p {
        color: var(--gray);
        opacity: 0.8;
      }
      
      /* ===== QR Scanner Button ===== */
.qr-scan-btn {
  background-color: #007bff;
  color: white;
  padding: 10px 16px;
  border-radius: 8px;
  display: flex;
  align-items: center;
  gap: 8px;
  cursor: pointer;
  font-weight: 500;
  transition: background-color 0.2s ease;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
}

.qr-scan-btn:hover {
  background-color: #0069d9;
}

/* ===== QR Modal ===== */
.qr-modal {
  display: none; /* Shown dynamically via JS */
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.4);
  justify-content: center;
  align-items: center;
  z-index: 2000;
}

.qr-modal-content {
  background-color: #fff;
  padding: 20px;
  border-radius: 12px;
  width: 90%;
  max-width: 400px;
  text-align: center;
  position: relative;
  box-shadow: 0 5px 20px rgba(0, 0, 0, 0.2);
}

.qr-close-btn {
  position: absolute;
  top: 10px;
  right: 16px;
  font-size: 1.5rem;
  color: #333;
  cursor: pointer;
}

.qr-box {
  width: 280px;
  height: 280px;
  margin: 20px auto 0;
  border: 3px solid #007bff;
  border-radius: 10px;
}

/* Responsive header alignment */
.header-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
}




      @media (max-width: 992px) {
        .bodyContainer {
          grid-template-columns: 1fr;
        }

        .adCon {
          height: auto;
          position: relative;
          top: 0;
          margin-bottom: 20px;
        }

        .ad-text {
          transform: rotate(0);
          padding: 30px;
        }
      }

      @media (max-width: 768px) {
        nav ul {
          gap: 10px !important;
          flex-wrap: wrap;
          justify-content: center;
        }

        .approval-tabs {
          flex-direction: row;
          overflow-x: auto;
        }

        .cards-container {
          grid-template-columns: 1fr;
        }

        .visitor-card {
          width: 100%;
        }
      }

      @media (max-width: 576px) {
        .popup-content {
          width: 95%;
          padding: 20px 15px;
        }

        .detail-row {
          flex-direction: column;
        }

        .detail-label {
          margin-bottom: 5px;
        }

        .card-footer {
          flex-direction: column;
          gap: 10px;
        }

        .action-btn {
          width: 100%;
          justify-content: center;
        }
      }
    </style>
  </head>

  <body>
    <%- include('../../partials/securityNav.ejs') %>

    <div class="bodyContainer">
      <!-- AD SECTION -->
      <div class="adCon d-flex justify-content-center align-items-center">
        <div class="advertisement" id="ad-slider">
          <% if (locals.ads && ads.filter(ad => ad.status==="Active").length > 0) { %> <% ads.filter(ad => ad.status==="Active").forEach(ad => { %>
          <img
            src="http://localhost:3000/<%= ad.imagePath.replace(/\\/g, '/') %>"
            class="ad-slide"
            alt="Ad"
            height="100px"
            width="200px"
          />
          <% }) %> <% } else { %>
          <div
            class="d-flex justify-content-center align-items-center"
            style="
              background-color: rgba(158, 207, 250, 0.539);
              border-radius: 8px;
              color: rgb(0, 80, 193);
              border: 3px dotted blue;
              height: 100%;
              width: 100%;
            "
          >
            <p class="ad-text fs-4" style="font-weight: 600">Advertisement</p>
          </div>
          <% } %>
        </div>
      </div>

      <!-- CONTENT SECTION -->
      <div class="contentCon">
      <div class="d-flex justify-content-between align-items-center mb-3 header-bar">
        <h4 class="section-title">Pre Approval Requests</h4>

      <!--QR  Scaner button -->
      <div id="qrScannerButton" class="qr-scan-btn">
        <i class="bi bi-qr-code-scan"></i>
        <span>Scan QR</span>
        </div>
      </div>    

        <!-- Approval Tabs -->
        <div class="approval-tabs">
          <div class="approval-tab active" data-tab="requests">
            Pending Requests
          </div>
          <div class="approval-tab" data-tab="approved">Approved</div>
          <div class="approval-tab" data-tab="rejected">Rejected</div>
        </div>

        <!-- Requests Cards -->
        <div id="tab-requests">
          <div class="cards-container">
            <% if (locals.pa && pa.filter(v => v.status === 'Pending').length) { %> <% pa.forEach(p=> { %> <% if (p.status==="Pending" ) { %>
            <div class="visitor-card"
              data-id="<%= p._id %>"
              data-name="<%= p.name %>"
              data-contact="<%= p.contactNumber %>"
              data-date="<%= p.dateOfVisit %>"
              data-ID="<%= p._id %>"
              data-requested="<%= p.approvedBy.residentFirstname + ' ' + p.approvedBy.residentLastname %>"
              data-purpose="<%= p.purpose %>"
              data-vehicle="<%= p.vehicleNumber %>">
              <div class="card-header">
                <span><i class="bi bi-person-fill"></i> <%= p.name %></span>
                <span class="status-badge badge-pending">Pending</span>
              </div>
              <div class="card-body">
                <div class="detail-row">
                  <div class="detail-label">Requested By:</div>
                  <div class="detail-value"><%= p.approvedBy.residentFirstname %> <%= p.approvedBy.residentLastname %></div>
                </div>
                <div class="detail-row">
                  <div class="detail-label">Purpose:</div>
                  <div class="detail-value"><%= p.purpose %></div>
                </div>
                <div class="detail-row">
                  <div class="detail-label">Visit Date:</div>
                  <div class="detail-value"><%= p.scheduledAt ? p.scheduledAt.toLocaleDateString() : "N/A" %>, <%= p.scheduledAt ? p.scheduledAt.toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' }) : "N/A"  %></div>
                </div>
                <div class="detail-row">
                  <div class="detail-label">Contact:</div>
                  <div class="detail-value"><%= p.contactNumber %></div>
                </div>
              </div>
              <div class="card-footer">
                <button class="action-btn approve">
                  <i class="bi bi-check-circle"></i> Approve
                </button>
                <button class="action-btn reject">
                  <i class="bi bi-x-circle"></i> Reject
                </button>
              </div>
            </div>
            <% } %> <% }) %> <% } else { %>
            <div class="empty-state w-100" style="grid-column-start: 1;grid-column-end: 4; " >
              <i class="bi bi-people"></i>
              <h4>No Pending Requests</h4>
              <p>There are currently no pending pre-approval requests.</p>
            </div>
            <% } %>
          </div>
        </div>

        <!-- Approved Cards -->
        <div id="tab-approved" class="d-none">
          <div class="cards-container">
            <% if (locals.pa && pa.filter(v => v.status === 'Approved').length) { %> <% pa.forEach(p=> { %> <% if (p.status==="Approved" ) { %>
            <div class="visitor-card">
              <div class="card-header">
                <span><i class="bi bi-person-fill"></i> <%= p.name %></span>
                <span class="status-badge badge-approved">Approved</span>
              </div>
              <div class="card-body">
                <div class="detail-row">
                  <div class="detail-label">Requested By:</div>
                  <div class="detail-value"><%= p.approvedBy.residentFirstname %> <%= p.approvedBy.residentLastname %></div>
                </div>
                <div class="detail-row">
                  <div class="detail-label">Purpose:</div>
                  <div class="detail-value"><%= p.purpose %></div>
                </div>
                <div class="detail-row">
                  <div class="detail-label">Visit Date:</div>
                  <div class="detail-value">
                    <%= p.scheduledAt ? p.scheduledAt.toLocaleDateString() : "N/A" %>, 
                    <%= p.scheduledAt ? p.scheduledAt.toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' }) : "N/A" %>
                  </div>
                </div>
                <div class="detail-row">
                  <div class="detail-label">Vehicle:</div>
                  <div class="detail-value"><%= p.vehicleNumber || 'N/A' %></div>
                </div>
              </div>
            </div>
            <% } %> <% }) %> <% } else { %>
            <div class="empty-state w-100" style="grid-column-start: 1;grid-column-end: 4; " >
              <i class="bi bi-people"></i>
              <h4>No Approved Requests</h4>
              <p>There are currently no approved pre-approval requests.</p>
            </div>
            <% } %>
          </div>
        </div>

        <!-- Rejected Cards -->
        <div id="tab-rejected" class="d-none">
          <div class="cards-container">
            <% if (locals.pa && pa.filter(v => v.status === 'Rejected').length) { %> <% pa.forEach(p=> { %> <% if (p.status==="Rejected" ) { %>
            <div class="visitor-card">
              <div class="card-header">
                <span><i class="bi bi-person-fill"></i> <%= p.name %></span>
                <span class="status-badge badge-rejected">Rejected</span>
              </div>
              <div class="card-body">
                <div class="detail-row">
                  <div class="detail-label">Requested By:</div>
                  <div class="detail-value"><%= p.approvedBy.residentFirstname %> <%= p.approvedBy.residentLastname %></div>
                </div>
                <div class="detail-row">
                  <div class="detail-label">Purpose:</div>
                  <div class="detail-value"><%= p.purpose %></div>
                </div>
                <div class="detail-row">
                <div class="detail-label">Visit Date:</div>
                <div class="detail-value">
                  <%= p.scheduledAt ? p.scheduledAt.toLocaleDateString() : "N/A" %>, 
                  <%= p.scheduledAt ? p.scheduledAt.toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' }) : "N/A" %>
                </div>
              </div>
              </div>
            </div>
            <% } %> <% }) %> <% } else { %>
            <div class="empty-state w-100" style="grid-column-start: 1;grid-column-end: 4; " >
              <i class="bi bi-people"></i>
              <h4>No Rejected Requests</h4>
              <p>There are currently no rejected pre-approval requests.</p>
            </div>
            <% } %>
          </div>
        </div>

        <!-- QR Scanner Modal -->
        <div id="qrScannerModal" class="qr-modal">
          <div class="qr-modal-content">
            <span class="qr-close-btn" onclick="closeQRScanner()">&times;</span>
            <h3 class="form-title">Scan Visitor QR</h3>
            <div id="qrScanner" class="qr-box"></div>
          </div>
        </div>
      </div>
    </div>

    <!-- Visitor Details Popup -->
    <div id="visitorPopup" class="popup">
      <div class="popup-content">
        <span class="close-btn" onclick="closePopup()">&times;</span>
        <h3 class="form-title">Visitor Details</h3>

        <div class="detail-item">
          <div class="detail-label">Name</div>
          <div class="detail-value" id="popupName"></div>
        </div>

        <div class="detail-item">
          <div class="detail-label">Contact Number</div>
          <div class="detail-value" id="popupContact"></div>
        </div>

        <div class="detail-item">
          <div class="detail-label">Requested By</div>
          <div class="detail-value" id="popupRequested"></div>
        </div>

        <div class="detail-item">
          <div class="detail-label">Purpose</div>
          <div class="detail-value" id="popupPurpose"></div>
        </div>

        <div class="detail-item">
          <div class="detail-label">Visit Date</div>
          <div class="detail-value" id="popupDate"></div>
        </div>

        <div class="detail-item hidden">
          <div class="detail-label">ID</div>
          <div class="detail-value" id="popupID"></div>
        </div>

        <div class="detail-item">
          <div class="detail-label">Vehicle Number</div>
          <input class="form-control" id="popupVehicle" type="text" placeholder="Enter vehicle number if any" />
        </div>

        <div class="d-flex justify-content-between mt-4">
          <button class="action-btn approve" id="approveBtn">
            <i class="bi bi-check-circle"></i> Approve
          </button>
          <button class="action-btn reject" id="rejectBtn">
            <i class="bi bi-x-circle"></i> Reject
          </button>
        </div>
      </div>
    </div>
    <script src="../../js/security/preApproval.js"></script>
    <script src="../../js/sidebar.js"></script>
    
  </body>
</html>