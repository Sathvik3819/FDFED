<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Visitor Management Dashboard</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Outfit:wght@100..900&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/../../css/nav.css" />

    <style>
      .section-title {
        position: relative;
        padding-bottom: 15px;
        margin-bottom: 25px;
        border-bottom: 2px solid #e9ecef;
      }

      .section-title::after {
        content: "";
        position: absolute;
        bottom: -2px;
        left: 0;
        width: 120px;
        height: 3px;
        background: linear-gradient(90deg, var(--primary), var(--secondary));
        border-radius: 3px;
      }

      /* Stats Grid */
      .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin-bottom: 30px;
      }

      .stat-card {
        background: white;
        border-radius: var(--border-radius);
        padding: 25px;
        box-shadow: var(--shadow);
        text-align: center;
        transition: var(--transition);
        border-left: 5px solid;
      }

      .stat-card:nth-child(1) {
        border-left-color: var(--success);
      }

      .stat-card:nth-child(2) {
        border-left-color: var(--warning);
      }

      .stat-card:nth-child(3) {
        border-left-color: var(--primary);
      }

      .stat-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
      }

      .card-value {
        font-size: 2.5rem;
        font-weight: 700;
        margin: 10px 0;
        letter-spacing: -1px;
      }

      .card-label {
        color: var(--gray);
        font-size: 1.1rem;
        font-weight: 500;
      }

      /* Add Visitor Section */
      .add-visitor-section {
        background: linear-gradient(135deg, #fff8f5, #fff0e8);
        border: 2px solid var(--secondary);
        border-radius: var(--border-radius);
        font-size: 1.25rem;
        padding: 20px;
        font-weight: 600;
        color: #e65100;
        display: flex;
        align-items: center;
        gap: 15px;
        transition: var(--transition);
        cursor: pointer;
        margin-bottom: 30px;
        text-decoration: none !important;
      }

      .add-visitor-section:hover {
        background: linear-gradient(135deg, #fff0e8, #ffe8e0);
        transform: translateY(-3px);
        box-shadow: 0 6px 15px rgba(255, 107, 53, 0.2);
      }

      .add-visitor-section i {
        background: var(--secondary);
        color: white;
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
      }

      /* Search and Filter Section */
      .search-section {
        display: flex;
        gap: 15px;
        margin-bottom: 25px;
        flex-wrap: wrap;
      }

      .search-input {
        flex: 1;
        min-width: 250px;
        padding: 12px 20px;
        border: 1px solid #ced4da;
        border-radius: var(--border-radius);
        transition: var(--transition);
      }

      .search-input:focus {
        border-color: var(--primary);
        outline: none;
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
      }

      .filter-btn {
        padding: 12px 20px;
        background-color: white;
        border: 1px solid #ced4da;
        border-radius: var(--border-radius);
        font-weight: 500;
        transition: var(--transition);
        display: flex;
        align-items: center;
        gap: 8px;
        white-space: nowrap;
      }

      .filter-btn:hover {
        background-color: #f8f9fa;
      }

      .export-btn {
        padding: 12px 20px;
        background-color: var(--warning);
        color: white;
        border: none;
        border-radius: var(--border-radius);
        font-weight: 500;
        transition: var(--transition);
        display: flex;
        align-items: center;
        gap: 8px;
        white-space: nowrap;
      }

      .export-btn:hover {
        background-color: #e0a800;
        transform: translateY(-2px);
        box-shadow: var(--shadow);
      }

      /* Visitor Tabs */
      .visitor-tabs {
        display: flex;
        margin-bottom: 20px;
        border-bottom: 1px solid #dee2e6;
        overflow-x: auto;
        scrollbar-width: none;
      }

      .visitor-tabs::-webkit-scrollbar {
        display: none;
      }

      .visitor-tab {
        padding: 12px 20px;
        cursor: pointer;
        font-weight: 500;
        color: var(--gray);
        transition: var(--transition);
        border-bottom: 3px solid transparent;
        text-align: center;
        flex: 1;
        min-width: max-content;
        white-space: nowrap;
      }

      .visitor-tab.active {
        color: var(--primary);
        border-bottom-color: var(--primary);
        background-color: var(--primary-light);
      }

      .visitor-tab:hover:not(.active) {
        background-color: rgba(0, 0, 0, 0.03);
      }

      /* Visitor Cards Container */
      .visitor-cards-container {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
        gap: 20px;
        display: none; /* Hide all containers by default */
      }

      .visitor-cards-container.active {
        display: grid; /* Show active container */
      }

      /* Visitor Card */
      .visitor-card {
        background: white;
        border-radius: var(--border-radius);
        padding: 20px;
        box-shadow: var(--shadow);
        transition: var(--transition);
        border-top: 4px solid;
        position: relative;
      }

      .visitor-card.pending {
        border-top-color: var(--warning);
      }

      .visitor-card.active {
        border-top-color: var(--success);
      }

      .visitor-card.checkedOut {
        border-top-color: var(--danger);
      }

      .visitor-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
      }

      .visitor-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 15px;
      }

      .visitor-name {
        font-size: 1.3rem;
        font-weight: 600;
        color: var(--dark);
      }

      .visitor-status {
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 500;
      }

      .status-pending {
        background-color: #fff3cd;
        color: #856404;
      }

      .status-active {
        background-color: #d1e7dd;
        color: #0f5132;
      }

      .status-checkedOut {
        background-color: #f8d7da;
        color: #842029;
      }

      .visitor-details {
        margin: 15px 0;
      }

      .detail-row {
        display: flex;
        margin-bottom: 10px;
      }

      .detail-label {
        font-weight: 500;
        color: var(--dark);
        min-width: 100px;
      }

      .detail-value {
        color: var(--gray);
        flex: 1;
      }

      .visitor-actions {
        display: flex;
        justify-content: flex-end;
        gap: 10px;
        margin-top: 15px;
        padding-top: 15px;
        border-top: 1px dashed var(--light-gray);
      }

      .btn {
        padding: 8px 16px;
        border-radius: 20px;
        font-weight: 500;
        transition: var(--transition);
        display: inline-flex;
        align-items: center;
        gap: 5px;
        font-size: 0.9rem;
      }

      .btn i {
        font-size: 0.9rem;
      }

      /* Empty State */
      .empty-state {
        text-align: center;
        padding: 40px 20px;
        background: white;
        border-radius: var(--border-radius);
        box-shadow: var(--shadow);
        grid-column: 1 / -1;
      }

      .empty-state i {
        font-size: 3rem;
        color: var(--light-gray);
        margin-bottom: 15px;
      }

      .empty-state h3 {
        color: var(--gray);
        margin-bottom: 10px;
      }

      .empty-state p {
        color: var(--gray);
        opacity: 0.8;
      }

      /* Responsive Styles */
      @media (max-width: 992px) {
        .bodyContainer {
          grid-template-columns: 1fr;
        }

        .adCon {
          height: auto;
          position: relative;
          top: 0;
          margin-bottom: 20px;
        }

        .ad-text {
          transform: rotate(0);
          padding: 30px;
        }
      }

      @media (max-width: 768px) {
        nav ul {
          gap: 10px !important;
          flex-wrap: wrap;
          justify-content: center;
        }

        .visitor-tabs {
          flex-direction: column;
          border-bottom: none;
        }

        .visitor-tab {
          border-bottom: none;
          border-left: 3px solid transparent;
          text-align: left;
        }

        .visitor-tab.active {
          border-left-color: var(--primary);
          border-bottom-color: transparent;
        }

        .search-section {
          flex-direction: column;
        }

        .search-input,
        .filter-btn,
        .export-btn {
          width: 100%;
        }
      }

      @media (max-width: 576px) {
        .visitor-cards-container {
          grid-template-columns: 1fr;
        }

        .visitor-card {
          padding: 15px;
        }

        .visitor-name {
          font-size: 1.1rem;
        }

        .detail-row {
          flex-direction: column;
          gap: 5px;
        }

        .detail-label {
          min-width: auto;
        }

        .visitor-actions {
          flex-direction: column;
        }

        .btn {
          width: 100%;
          justify-content: center;
        }
      }

      /* Animation */
      @keyframes fadeInUp {
        from {
          opacity: 0;
          transform: translateY(20px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      .visitor-card {
        opacity: 0;
        animation: fadeInUp 0.5s ease forwards;
      }

      .visitor-card:nth-child(1) {
        animation-delay: 0.1s;
      }
      .visitor-card:nth-child(2) {
        animation-delay: 0.2s;
      }
      .visitor-card:nth-child(3) {
        animation-delay: 0.3s;
      }
      .visitor-card:nth-child(4) {
        animation-delay: 0.4s;
      }
      .visitor-card:nth-child(5) {
        animation-delay: 0.5s;
      }
      .visitor-card:nth-child(6) {
        animation-delay: 0.6s;
      }
      .visitor-card:nth-child(7) {
        animation-delay: 0.7s;
      }
      .visitor-card:nth-child(8) {
        animation-delay: 0.8s;
      }
    </style>
  </head>

  <body>
    <%- include('../../partials/securityNav.ejs') %>

    <div class="bodyContainer">
      <!-- AD SECTION -->
      <div class="adCon d-flex justify-content-center align-items-center">
        <div class="advertisement" id="ad-slider">
          <% if (locals.ads && ads.length > 0) { %> <% ads.forEach(ad => { %>
          <img
            src="http://localhost:3000/<%= ad.imagePath.replace(/\\/g, '/') %>"
            class="ad-slide"
            alt="Ad"
            height="100px"
            width="200px"
          />
          <% }) %> <% } else { %>
          <p class="ad-text">Advertisement</p>
          <% } %>
        </div>
      </div>

      <!-- CONTENT SECTION -->
      <div class="contentCon">
        <h4 class="section-title">Visitor Management</h4>

        <!-- Stats Cards -->
        <div class="stats-grid">
          <div class="stat-card">
            <div
              class="card-body d-flex flex-column justify-content-center align-items-center py-4"
            >
              <div class="card-label">Total Visitors Today</div>
              <div class="card-value text-success">
                <% if (locals.visitors) { %> <%= visitors.length %> <% } %>
              </div>
              <div><i class="bi bi-people-fill fs-2 text-success"></i></div>
            </div>
          </div>

          <div class="stat-card">
            <div
              class="card-body d-flex flex-column justify-content-center align-items-center py-4"
            >
              <div class="card-label">Checked out visitors</div>
              <div class="card-value text-warning">
                <% if (locals.visitors) { %> <%= visitors.filter(v => v.status
                === 'checkedOut').length %> <% } %>
              </div>
              <div><i class="bi bi-hourglass-split fs-2 text-warning"></i></div>
            </div>
          </div>

          <div class="stat-card">
            <div
              class="card-body d-flex flex-column justify-content-center align-items-center py-4"
            >
              <div class="card-label">Active Visitors</div>
              <div class="card-value text-primary">
                <% if (locals.visitors) { %> <%= visitors.filter(v => v.status
                === 'active').length %> <% } %>
              </div>
              <div><i class="bi bi-person-check fs-2 text-primary"></i></div>
            </div>
          </div>
        </div>

        <a href="/security/addVisitor" class="add-visitor-section">
          <i class="bi bi-plus-lg"></i>
          <div>Add New Visitor</div>
        </a>

        <!-- Search and Filter Section -->
        <div class="search-section">
          <input
            type="text"
            class="search-input"
            placeholder="Search by name, date, status..."
          />
          <button class="filter-btn">
            <i class="bi bi-funnel"></i> Search
          </button>
          <button class="export-btn">
            <i class="bi bi-download"></i> Export
          </button>
        </div>

        <!-- Visitor Tabs -->
        <div class="visitor-tabs">
          <div class="visitor-tab active" data-tab="all">All Visitors</div>
          <div class="visitor-tab" data-tab="active">Active</div>
          <div class="visitor-tab" data-tab="checked-out">Checked Out</div>
        </div>

        <!-- All Visitors Container -->
        <div class="visitor-cards-container active" id="all-visitors">
          <% if (locals.visitors && visitors.length > 0) { %> <%
          visitors.forEach(v => { %>
          <div class="visitor-card <%= v.status %>">
            <div class="visitor-header">
              <div class="visitor-name"><%= v.name %></div>
              <div class="visitor-status status-<%= v.status %>">
                <%= v.status.charAt(0).toUpperCase() + v.status.slice(1) %>
              </div>
            </div>

            <div class="visitor-details">
              <div class="detail-row">
                <div class="detail-label">Purpose:</div>
                <div class="detail-value"><%= v.purpose %></div>
              </div>
              <div class="detail-row">
                <div class="detail-label">Date:</div>
                <div class="detail-value"><%= v.entryDate %></div>
              </div>
              <div class="detail-row">
                <div class="detail-label">Time:</div>
                <div class="detail-value"><%= v.entryTime %></div>
              </div>
            </div>

            <div class="visitor-actions">
              <% if (v.status === "active") { %>
              <button
                class="btn btn-secondary check-btn"
                data-id="<%= v._id %>"
                data-action="checked-out"
              >
                <i class="bi bi-box-arrow-right"></i> Check Out
              </button>
              <% } else if (v.status === "pending") { %>
              <button
                class="btn btn-primary check-btn"
                data-id="<%= v._id %>"
                data-action="checked-in"
              >
                <i class="bi bi-box-arrow-in-right"></i> Check In
              </button>
              <% } %>
            </div>
          </div>
          <% }) %> <% } else { %>
          <div class="empty-state">
            <i class="bi bi-person-x"></i>
            <h3>No Visitors Found</h3>
            <p>Add new visitors to see them listed here</p>
          </div>
          <% } %>
        </div>

        <!-- Active Visitors Container -->
        <div class="visitor-cards-container" id="active-visitors">
          <% if (locals.visitors && visitors.filter(v => v.status ===
          'active').length > 0) { %> <% visitors.filter(v => v.status ===
          'active').forEach(v => { %>
          <div class="visitor-card <%= v.status %>">
            <div class="visitor-header">
              <div class="visitor-name"><%= v.name %></div>
              <div class="visitor-status status-<%= v.status %>">
                <%= v.status.charAt(0).toUpperCase() + v.status.slice(1) %>
              </div>
            </div>

            <div class="visitor-details">
              <div class="detail-row">
                <div class="detail-label">Purpose:</div>
                <div class="detail-value"><%= v.purpose %></div>
              </div>
              <div class="detail-row">
                <div class="detail-label">Date:</div>
                <div class="detail-value"><%= v.entryDate %></div>
              </div>
              <div class="detail-row">
                <div class="detail-label">Time:</div>
                <div class="detail-value"><%= v.entryTime %></div>
              </div>
            </div>

            <div class="visitor-actions">
              <button
                class="btn btn-secondary check-btn"
                data-id="<%= v._id %>"
                data-action="checked-out"
              >
                <i class="bi bi-box-arrow-right"></i> Check Out
              </button>
            </div>
          </div>
          <% }) %> <% } else { %>
          <div class="empty-state">
            <i class="bi bi-person-x"></i>
            <h3>No Active Visitors</h3>
            <p>There are currently no active visitors</p>
          </div>
          <% } %>
        </div>

        <!-- Checked Out Visitors Container -->
        <div class="visitor-cards-container" id="checked-out-visitors">
          <% if (locals.visitors && visitors.filter(v => v.status ===
          'checkedOut').length > 0) { %> <% visitors.filter(v => v.status ===
          'checkedOut').forEach(v => { %>
          <div class="visitor-card <%= v.status %>">
            <div class="visitor-header">
              <div class="visitor-name"><%= v.name %></div>
              <div class="visitor-status status-<%= v.status %>">
                <%= v.status.charAt(0).toUpperCase() + v.status.slice(1) %>
              </div>
            </div>

            <div class="visitor-details">
              <div class="detail-row">
                <div class="detail-label">Purpose:</div>
                <div class="detail-value"><%= v.purpose %></div>
              </div>
              <div class="detail-row">
                <div class="detail-label">Date:</div>
                <div class="detail-value"><%= v.entryDate %></div>
              </div>
              <div class="detail-row">
                <div class="detail-label">Time:</div>
                <div class="detail-value"><%= v.entryTime %></div>
              </div>
            </div>
          </div>
          <% }) %> <% } else { %>
          <div class="empty-state">
            <i class="bi bi-person-x"></i>
            <h3>No Checked Out Visitors</h3>
            <p>There are currently no checked out visitors</p>
          </div>
          <% } %>
        </div>
      </div>
    </div>

    <script src="../../js/security/visitorManagement.js"></script>
    <script src="../../js/sidebar.js"></script>
  </body>
</html>
